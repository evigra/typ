<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="stock_analysis_graph_inherit" model="ir.ui.view">
         <field name="name">stock.analysis.graph.inherit</field>
         <field name="model">stock.analysis</field>
         <field name="inherit_id" ref="stock_analysis.stock_analysis_graph"/>
         <field name="arch" type="xml">
             <xpath expr="//graph[@string='Stock Analysis']" position="inside">
                 <field name="product_min_qty" type="measure"/>
                 <field name="product_max_qty" type="measure"/>
                 <field name="standard_price" type="measure"/>
             </xpath>
         </field>
    </record>

    <record id="stock_analysis_graph_search_inherit" model="ir.ui.view">
        <field name="name">stock.analysis.search.inherit</field>
        <field name="model">stock.analysis</field>
        <field name="inherit_id" ref="stock_analysis.stock_analysis_graph_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@string='This Year']" position="after">
                <field name="warehouse_id"/>
                <filter name="balanced" string="Not Balanced" domain="[('balanced','=', False)]')]"/>
            </xpath>
            <xpath expr="//filter[@name='stockable']" position="attributes">
                <attribute name="invisible" translation="off">1</attribute>
            </xpath>
            <xpath expr="//filter[@name='consumable']" position="attributes">
                <attribute name="invisible" translation="off">1</attribute>
            </xpath>
            <xpath expr="//filter[@name='year']" position="attributes">
                <attribute name="invisible" translation="off">1</attribute>
            </xpath>
          <xpath expr="//group[@string='Group By']" position="inside">
                <filter string="Partner" name="Partner" context="{'group_by':'partner_id'}"/>
                <filter string="Warehouse" name="Warehouse" context="{'group_by':'warehouse_id'}"/>
                <filter string="Status" name="Status" context="{'group_by':'state'}"/>
                <filter string="Importance" name="Importance" context="{'group_by':'importance'}"/>
            </xpath>
        </field>
    </record>

    <record id="stock_analysis.action_stock_analysis_graph" model="ir.actions.act_window">
        <field name="context">{'search_default_balanced':1,'search_default_internal_location':1}</field>
    </record>
    <menuitem name="Stock Analysis" id="base.next_id_80" parent="base.menu_reporting" sequence="30"/>
    <menuitem action="stock_analysis.action_stock_analysis_graph" id="stock_analysis.menu_action_stock_analysis_graph" parent="base.next_id_80" />

</data>
</openerp>
