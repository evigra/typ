<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="typ_stock.report_picking" inherit_id="stock.report_picking">
        <div class="page" position="replace">
            <div class="page">
                <div class="row"><div class="col-xs-4 pull-right">
                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px;"/>
                </div></div>
                <div class="row">
                    <div class="col-xs-6">
                        <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                            <span><strong>Supplier Address:</strong></span>
                        </div>
                        <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                            <span><strong>Warehouse Address:</strong></span>
                        </div>
                        <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                            <span><strong>Customer Address:</strong></span>
                        </div>
                        <div t-if="o.partner_id" name="partner_header">
                            <div t-field="o.partner_id"
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                            <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                        </div>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                            <span><strong>Delivery Address:</strong></span>
                            <div t-field="o.move_lines[0].partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                        </div>
                        <div t-if="o.picking_type_id.code != 'internal' and (not o.move_lines or not o.move_lines[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                            <span><strong>Warehouse Address:</strong></span>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                        </div>
                    </div>
                </div>
                <h2>
                    <span t-field="o.picking_type_id"/>:
                    <span t-field="o.name"/>
                </h2>
                <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Order (Origin)</strong></th>
                        <th><strong>State</strong></th>
                        <th><strong>Commitment Date</strong></th>
                        <th name="td_sched_date_h"><strong>Scheduled Date</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <span t-field="o.origin"/>
                        </td>
                        <td>
                            <span t-field="o.state"/>
                        </td>
                        <td>
                            <span t-field="o.date"/>
                        </td>
                        <td name="td_sched_date">
                            <span t-field="o.picking_shipment_date"/>
                        </td>
                    </tr>
                </tbody>
                </table>
                <br/>
                <br/>
                <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Product</strong></th>
                        <th class="text-right"><strong>Quantity</strong></th>
                        <t t-if="o.picking_type_id.code != 'incoming'"><th><strong>Source</strong></th></t>
                        <th class="text-center"><strong>Barcode</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="order_category" t-value="o.move_lines.mapped('product_id.categ_id.parent_id').sorted(key=lambda r: r.name)"/>
                    <t t-foreach="order_category" t-as="categ">
                        <t t-set="move_order_ref_product" t-value="o.move_lines.filtered(lambda r : r.product_id.categ_id.parent_id == categ).sorted(key=lambda r: r.product_id.default_code)"/>
                        <t t-foreach="move_order_ref_product" t-as="move">
                            <tr t-foreach="move.move_line_ids.sorted(key=lambda ml: ml.location_id.id)" t-as="ml">
                                <t t-if="(ml.qty_done > 0 and o.picking_type_id.code != 'outgoing') or o.picking_type_id.code != 'incoming'">
                                    <td>
                                        <t t-if="not move.move_dest_ids"><span t-field="move.name"/></t>
                                        <t t-if="move.move_dest_ids"><span t-field="move.product_id"/></t>
                                        <t t-if="ml.package_id"><span t-field="ml.package_id"/></t>
                                    </td>
                                    <t t-if="o.picking_type_id.code != 'incoming'">
                                        <td class="text-right">
                                            <t t-if="o.state == 'done'">
                                                <span t-field="ml.qty_done"/> <span t-field="move.product_id.uom_id" groups="product.group_uom"/>
                                            </t>
                                            <t t-if="o.state != 'done'">
                                                <span t-field="ml.product_uom_qty"/> <span t-field="move.product_uom" groups="product.group_uom"/>
                                            </t>
                                        </td>
                                    </t>
                                    <t t-if="o.picking_type_id.code != 'outgoing'">
                                        <td class="text-right">
                                            <span t-field="ml.qty_done"/> <span t-field="move.product_id.uom_id" groups="product.group_uom"/>
                                        </td>
                                    </t>
                                    <t t-if="o.picking_type_id.code != 'incoming'"><td><span t-field="move.location_id"/>
                                        <span t-if="ml.lot_id">:</span>
                                        <span t-if="ml.lot_id" t-field="ml.lot_id"/>
                                        <span t-if="ml.package_id">:</span>
                                        <span t-if="ml.package_id" t-field="ml.package_id"/></td></t>
                                    <td class="text-center">
                                        <span t-if="ml.lot_id">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', ml.lot_id.name, 600, 100)" style="width:300px;height:50px"/>
                                        </span>
                                        <span t-if="move.product_id and not ml.lot_id and move.product_id.barcode">
                                            <img t-if="len(move.product_id.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', move.product_id.barcode, 600, 100)" style="width:300px;height:50px" alt="Barcode"/>
                                            <img t-elif="len(move.product_id.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', move.product_id.barcode, 600, 100)" style="width:300px;height:50px" alt="Barcode"/>
                                            <img t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', move.product_id.barcode, 600, 100)" style="width:300px;height:50px" alt="Barcode"/>
                                        </span>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </t>
                </tbody>
                </table>
                <p><strong>Notes</strong>: <span t-field="o.note"/></p>
            </div>
        </div>
    </template>
</odoo>
