<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_typ_stock_serial_inherit">
            <field name="name">typ.stock.serial.inherit</field>
            <field name="model">stock.serial</field>
            <field name="inherit_id" ref="product_unique_serial.view_stock_serial"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="attributes">
                    <attribute name="invisible" translation="off">0</attribute>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="product_id" invisible="1"/>
                    <field name="source_loc_id" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>


