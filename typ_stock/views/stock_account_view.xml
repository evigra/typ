<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="stock_account_product_view_tree_extra" model="ir.ui.view">
        <field name="name">stock.account.product.view.tree.extra</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock_account.view_stock_product_tree2"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="before">
                <field name="categ_id"/>
                <field name="default_code"/>
            </xpath>
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="sales_count"/>
                <field name="purchase_count"/>
                <field name="standard_price" groups="typ_stock.res_group_standard_price"/>
            </xpath>
            <xpath expr="//field[@name='qty_at_date']" position="after">
                <field name="reordering_max_qty"/>
                <field name="reordering_min_qty"/>
            </xpath>
        </field>
    </record>

    <record id="view_location_form_inherit_typ" model="ir.ui.view">
        <field name="name">stock.location.form.inherit.typ</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock_account.view_location_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr='//group/group[3]' position="attributes">
                <attribute name="attrs">{'invisible':[('usage','not in',('inventory','production','transit'))]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
