<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_product_template_stock_property_inherit" model="ir.ui.view">
            <field name="name">product.template.stock.property.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock_account.view_template_property_form"/>
            <field name="arch" type="xml">
                <label for="standard_price" position="attributes">
                    <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
                </label>
                <field name="standard_price" position="attributes">
                    <attribute name="readonly" translation="off">1</attribute>
                    <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
                </field>
                <button name="%(stock_account.action_view_change_standard_price)d" position="attributes">
                    <attribute name="groups" translation="off">typ_stock.res_group_standard_price_button</attribute>
                </button>
            </field>
        </record>

        <record id="product_template_view_inherith" model="ir.ui.view">
            <field name="name">product.template.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="default_code"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
