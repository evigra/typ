<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_property_inherit" model="ir.ui.view">
        <field name="name">product.template.property.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock_account.view_template_property_form"/>
        <field name="arch" type="xml">
            <label for="standard_price" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </label>
            <field name="standard_price" position="attributes">
                <attribute name="readonly" translation="off">1</attribute>
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </field>
            <button name="%(stock_account.action_view_change_standard_price)d" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price_button</attribute>
            </button>
            <field name="list_price" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </field>
        </field>
    </record>
    <record id="product_template_view_inherith" model="ir.ui.view">
        <field name="name">product.template.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="list_price" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </field>
        </field>
    </record>
    <record id="product_template_kanban_view_inherith" model="ir.ui.view">
        <field name="name">product.template.kanban.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <field name="lst_price" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </field>
            <xpath expr="//div[hasclass('oe_kanban_details')]/ul/li" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_product_product_inherit" model="ir.ui.view">
        <field name="name">product.product.stock.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <label for="standard_price" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </label>
            <field name="standard_price" position="attributes">
                <attribute name="readonly" translation="off">1</attribute>
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </field>
            <button name="%(stock_account.action_view_change_standard_price)d" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price_button</attribute>
            </button>
            <field name="lst_price" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </field>
        </field>
    </record>
    <record id="product_product_view_inherith" model="ir.ui.view">
        <field name="name">product.product.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <field name="lst_price" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </field>
        </field>
    </record>
    <record id="product_kanban_view_inherith" model="ir.ui.view">
        <field name="name">product.kanban.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view"/>
        <field name="arch" type="xml">
            <field name="lst_price" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </field>
            <xpath expr="//div[hasclass('oe_kanban_details')]/ul/li" position="attributes">
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </xpath>
        </field>
    </record>
</odoo>
