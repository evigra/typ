<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="portal_action_refunds" model="ir.actions.act_window">
            <field name="name">Refunds</field>
            <field name="res_model">account.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','out_refund'),
            ('state','not in',['draft','cancel'])]</field>
            <field name="context">{'group_by': ['state','period_id','currency_id']}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help">We haven't sent you any refund.</field>
        </record>

        <record id="portal_action_refunds_tree_spec" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="portal_action_refunds"/>
            <field name="view_mode">tree</field>
            <field name="sequence" eval="1"/>
        </record>

        <record id="portal_action_refunds_form_spec" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="portal_action_refunds"/>
            <field name="view_id" ref="account.invoice_form"/>
            <field name="view_mode">form</field>
            <field name="sequence" eval="2"/>
        </record>

        <record id="portal_group_manager" model="res.groups">
            <field name="name">Portal / Manager</field>
        </record>
        <record id="portal.portal_mail_archivesfeeds" model="ir.ui.menu">
            <field name="groups_id" eval="[(6,0,[ref('portal_group_manager')])]"/>
        </record>
         <record id="portal.portal_projects" model="ir.ui.menu">
            <field name="groups_id" eval="[(6,0,[ref('portal_group_manager')])]"/>
        </record>
        <record id="portal_sale.portal_quotations" model="ir.ui.menu">
            <field name="groups_id" eval="[(6,0,[ref('portal_group_manager')])]"/>
        </record>
          <record id="portal_sale.portal_sales_orders" model="ir.ui.menu">
            <field name="groups_id" eval="[(6,0,[ref('portal_group_manager')])]"/>
        </record>
        <record id="portal_sale.portal_action_invoices" model="ir.actions.act_window">
            <field name="domain">[('type','=','out_invoice'),
            ('state','not in',['draft','cancel'])],</field>
            <field name="context">{'group_by': ['state','period_id','currency_id']}</field>
        </record>

        <menuitem name="Refunds" id="portal_refunds" parent="portal.portal_orders"
            action="portal_action_refunds" sequence="40"/>
        <record id="portal.partner_wizard_action" model="ir.actions.act_window">
            <field name="groups_id" eval="[(6,0,[ref('portal_group_manager')])]"/>
        </record>
        <record id="l10n_mx_facturae_base.act_invoice_attachment" model="ir.actions.act_window">
            <field name="groups_id" eval="[(6,0,[ref('base.group_user')])]"/>
        </record>

 </data>
</openerp>
