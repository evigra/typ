<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>
        <record id="account_invoice_select_inherit_view" model="ir.ui.view">
            <field name="name">account.invoice.select.inherit</field>
            <field name="model">account.invoice</field>
            <field name="groups_id" eval="[(4, ref('base.group_portal'))]"/>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Group By']" position="attributes">
                    <attribute name="invisible" translation="off">1</attribute>
                </xpath>
                 <xpath expr="//filter[@name='draft']" position="attributes">
                    <attribute name="invisible" translation="off">1</attribute>
                </xpath>
                 <xpath expr="//filter[@name='invoices']" position="attributes">
                    <attribute name="invisible" translation="off">1</attribute>
                </xpath>
                 <xpath expr="//filter[@name='unpaid']" position="attributes">
                    <attribute name="invisible" translation="off">1</attribute>
                </xpath>
             </field>
        </record>
        <record model="ir.ui.view" id="account_invoice_print_sent_butt_invoice_inherit">
            <field name="name">account.invoice.print.sent.butt</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="l10n_mx_facturae_base.account_invoice_print_sent_butt"/>
            <field name="groups_id" eval="[(4, ref('base.group_portal'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_attachment_view']" position="attributes">
                    <attribute name="invisible" translation="off">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_partner_form_inherit_purchase_sales" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.purchase_sales</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="groups_id" eval="[(4, ref('base.group_portal'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="attributes">
                    <attribute name="invisible" translation="off">1</attribute>
                </xpath>
            </field>
        </record>
  </data>
</openerp>
