<?xml version="1.0"?>
<openerp>
    <data>
        <!-- stock.partial.prorate.wizard -->
        <record model="ir.ui.view" id="stock_prorate_wizard_form">
            <field name="name">stock.partial.prorate.wizard</field>
            <field name="model">stock.partial.prorate.wizard</field>
            <field name="arch" type="xml">
                <form string="Prorate" version="7.0">
                    <group>
                        <group>
                            <field name="date" />
                            <field name="total_expense" invisible="1"/>
                            
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Service Lines">
                            <field name="service_prorate_ids" />
                        </page>
                        <page string="Stockable Lines">
                            <field name="stock_prorate_ids" />
                        </page>
                    </notebook>


                    <footer>
                        <button type="object" name="receive_products"
                            class="oe_highlight" string="Receive products" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="link_purchase_prorate_wizard_form" model="ir.actions.act_window">
            <field name="name">Purchase Prorate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.partial.prorate.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>
        <record model="ir.values" id="stock_purchase_prorate">
            <field name="model_id" ref="purchase.model_purchase_order" />
            <field name="name">Purchase Prorate</field>
            <field name="key2">client_action_multi</field>
            <field name="value"
                eval="'ir.actions.act_window,' + str(ref('link_purchase_prorate_wizard_form'))" />
            <field name="key">action</field>
            <field name="model">purchase.order</field>
        </record>

        <!-- stock.partial.prorate.service.line -->

        <record model="ir.ui.view" id="stock_partial_prorate_service_line_tree">
            <field name="name">stock.partial.prorate.service.line.tree</field>
            <field name="model">stock.partial.prorate.service.line</field>
            <field name="arch" type="xml">
                <tree string="Service Lines" editable="bottom" create="false" edit="false" delete="false">
                    <field name="name"/>
                    <field name="purchase_line_id"/>
                    <field name="purchase_id"/>
                    <field name="product_id"/>
                    <field name="qty"/>
                    <field name="uom_id" groups="product.group_uom"/>
                    <field name="price_unit"/>
                    <field name="total" sum="Total"/>
                </tree>
                
            </field>
        </record>
        
        <record model="ir.ui.view" id="stock_partial_prorate_stock_line_tree">
            <field name="name">stock.partial.prorate.stock.line.tree</field>
            <field name="model">stock.partial.prorate.stock.line</field>
            <field name="arch" type="xml">
                <tree string="Stockable Lines" editable="bottom" create="false">
                    <field name="purchase_line_id" invisible="1"/>
                    <field name="purchase_id" readonly="1"/>
                    <field name="name" readonly="1"/>
                     
                    <field name="product_id" invisible="1"/>
                    <field name="move_id" invisible="1"/>
                    <field name="qty" readonly="1"/>
                    <field name="uom_id" groups="product.group_uom"/>
                    <field name="price_unit" readonly="1"/>
                    <field name="total" sum="Total" readonly="1"/>
                    <field name="sent_qty" required="1" on_change="onchange_sent_qty(price_unit,sent_qty)"/>
                    <field name="sent_uom_id" groups="product.group_uom"/>
                    <field name="sent_total" sum="Total" readonly="1"/>
                    <field name="representation_percent" required="1" on_change="onchange_representation(product_id,uom_id,sent_uom_id,sent_qty,parent.total_expense,sent_total,representation_percent)"/>
                    <field name="prorated_expense" sum="Total" readonly="1"/>
                    <field name="total_incl_prorate" sum="Total" readonly="1"/>
                    <field name="new_price_unit" readonly="1"/>
                </tree>
                
            </field>
        </record>

    </data>
</openerp>  
        
