<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!-- supply request -->

        
        <record id="act_wait" model="workflow.activity">
            <field name="wkf_id" ref="argil_supply_request.stock_supply_request"/>
            <field name="name">waiting</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'wait'})</field>
        </record>
        <record id="act_ready" model="workflow.activity">
            <field name="wkf_id" ref="argil_supply_request.stock_supply_request"/>
            <field name="name">ready</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'ready'})</field>
        </record>
        
        
        
        <!--  supply request transaction -->
        
        <record id="trans_confirm_wait" model="workflow.transition">
            <field name="act_from" ref="argil_supply_request.act_confirmed"/>
            <field name="act_to" ref="act_wait"/>
            <field name="signal">supply_transfer_wait</field>
        </record>
        
        <record id="trans_wait_to_confirm" model="workflow.transition">
            <field name="act_from" ref="act_wait"/>
            <field name="act_to" ref="argil_supply_request.act_confirmed"/>
            <field name="signal">stock_transfer_confirm</field>
        </record>
        
        <record id="trans_wait_confirm" model="workflow.transition">
            <field name="act_from" ref="act_wait"/>
            <field name="act_to" ref="act_ready"/>
            <field name="signal">supply_ready_receive</field>
        </record>
        
        <record id="trans_ready_confirm" model="workflow.transition">
            <field name="act_from" ref="act_ready"/>
            <field name="act_to" ref="argil_supply_request.act_confirmed"/>
            <field name="signal">stock_transfer_confirm</field>
        </record>
        <record id="argil_supply_request.trans_confirm_done" model="workflow.transition">
            <field name="act_from" ref="act_ready"/>
            <field name="act_to" ref="argil_supply_request.act_supply_done"/>
            <field name="signal">supply_request_done</field>
        </record>
        
    
    </data>
    </openerp>