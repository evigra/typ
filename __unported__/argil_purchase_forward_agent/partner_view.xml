<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!-- partner -->
        <record id="view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <field name="is_company" pisition="after">
                    <field name="broker" invisible="1" />
                </field>
            </field>
        </record>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.broker.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <label for='is_company' position="after">
                    <field name="broker" class="oe_inline"/> <label for="broker" string="Is a Broker?"/>
                </label>
            </field>
        </record>

        <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <filter name="supplier" position="after">
                    <filter string="Brokers" name="broker" domain="[('broker','=',1)]"
                        help="Brokers" />
                </filter>
            </field>
        </record>


    </data>
</openerp>
    