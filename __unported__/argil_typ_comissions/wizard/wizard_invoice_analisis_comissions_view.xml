<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--Sale Order Generate-->
        <!--======================FORM VIEW =======================-->
        <record id="wizard_analisis_comissions_wizard_form_view" model="ir.ui.view">
            <field name="name">wizard.analisis.comissions.form</field>
            <field name="model">wizard.analisis.comissions</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Commissions for Sellers" version="7.0">
                    <separator colspan="4" string="Generate Commissions for Sellers"/>
                       <h3>Evaluation Period</h3>
                        <group col="4">
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <h3>Select how to evaluate</h3>
                        <group col="4">
                            <field name="all_salesman" attrs="{'invisible':[('select_salesman','=',True)]}" />
                            <field name="select_salesman" attrs="{'invisible':[('all_salesman','=',True)]}" />
                        </group>
                        <newline/>
                        <field name="salesman_information_ids" attrs="{'invisible':[('select_salesman','=',False)]}" >
                            <tree string="Select Sellers" editable="bottom">
                                <field name="user_id" domain="[('generates_commissions','=',True)]" />
                            </tree>
                        </field>
                        <group>
                            <field name="name" />
                        </group>
                        <group col="13" colspan="10">
                            <button special="cancel" string="Cancel" type="object" icon="gtk-cancel"/>
                            <button name="evaluation_comissions" string="Calcular" type="object" icon="gtk-ok"/>
                        </group>
                    </form>
                </field>
            </record>


        <!--============================================ACCION========================================-->
        <act_window
            name="Calculo de Comisiones"
            res_model="wizard.analisis.comissions"
            src_model="account.invoice"
            view_mode="form" target="new"
            key2="client_action_multi"
            id="action_wizard_comissions"/>

            <!--============================================MENU========================================-->
            
            <menuitem action="action_wizard_comissions" id="menu_action_wizard_comissions" parent="menu_reports_pssoft" sequence="1"/>

    </data>
</openerp>