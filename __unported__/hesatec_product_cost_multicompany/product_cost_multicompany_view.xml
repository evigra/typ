<?xml version="1.0" encoding="UTF-8"?>
    <openerp>
        <data>

        <record model="ir.ui.view" id="product_normal_form_view_cost_multicompany">
            <field name="name">product.normal.form.cost_multicompany</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="priority">50</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="standard_price" position="replace" >
                    <field name="standard_price" nolabel="1"/>
                </field>
                <group name="general" position="inside">                
                    <field name="standard_prices" 
                           context="{'default_product_id': active_id}" colspan="2" nolabel="1"
                           attrs="{'invisible':[('cost_method','=','average')]}">
                        <tree>
                            <field name="company_id" />
                            <field name="standard_price" />
                        </tree>
                        <form>                            
                            <field name="company_id" />
                            <field name="standard_price" />
                            <field name="product_id" invisible="1"/>                            
                        </form>
                    </field>
                </group>
            </field>
        </record>
        </data>
</openerp>
