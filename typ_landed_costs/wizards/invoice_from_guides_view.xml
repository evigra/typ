<?xml version='1.0' encoding='utf-8' ?>
<odoo>
        <record model="ir.ui.view" id="view_invoice_from_guides_form">
            <field name="name">invoice.from.guides.form</field>
            <field name="model">invoice.guides</field>
            <field name="arch" type="xml">
                <form string="Create invoice from guides">
                    <separator string="Do you really want to create the invoice?"/>
                    <group>
                        <field name="journal_id" required='True' class="oe_inline"/>
                        <field name="date_invoice" class="oe_inline"/>
                    </group>
                    <footer>
                        <button name="create_invoice" type="object"
                            string="Create invoice" class="oe_highlight"/>
                        or
                        <button name="cancel" string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="invoice_from_guides_wizard"
                    name="Create invoice from guides"
                    src_model="stock.landed.cost.guide"
                    res_model="invoice.guides"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
</odoo>
