<?xml version='1.0' encoding='utf-8' ?>
<openerp>
    <data>
        <!-- Guide Form View -->
        <record id="guide_form_view" model="ir.ui.view">
            <field name="name">stock.landed.cost.guide.form</field>
            <field name="model">stock.landed.cost.guide</field>
            <field name="arch" type="xml">
                <form string="Guide">
                    <group>
                        <field name="name"/>
                    </group>
                    <group col="4">
                        <field name="partner_id"/>
                        <field name="date"/>
                        <field name="warehouse_id"/>
                        <field name="currency_id"/>
                        <field name="origin"/>
                        <field name="destination"/>
                    </group>
                    <group>
                        <field name="line_ids"/>
                    </group>
                </form>
            </field>
        </record>
        <!-- Guide Line Tree View -->
        <record id="guide_line_tree_view" model="ir.ui.view">
            <field name="name">stock.landed.cost.guide.line.form</field>
            <field name="model">stock.landed.cost.guide.line</field>
            <field name="arch" type="xml">
                <tree string="Guide Line" editable="bottom">
                    <field
                        name="product_id"
                        domain="[('landed_cost_ok', '=', True)]"
                        />
                    <field name="cost"/>
                    <field name="freight_type"/>
                </tree>
            </field>
        </record>
        <!-- Inherited Landed Cost Form View -->
        <record id="main_form_view" model="ir.ui.view">
            <field name="name">stock.landed.cost.form</field>
            <field name="model">stock.landed.cost</field>
            <field
                name="inherit_id"
                ref="stock_landed_costs_average.view_stock_landed_cost_form"
                />
            <field name="arch" type="xml">
                <xpath expr='//field[@name="invoice_ids"]' position='after'>
                    <field
                        name="guide_ids"
                        widget="many2many_tags"
                        domain="[
                        ]"
                        />
                </xpath>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_landed_cost_guides">
            <field name="name">Landed Cost Guides</field>
            <field name="res_model">stock.landed.cost.guide</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_landed_cost_guides"
            parent="stock_landed_costs.menu_stock_landed_cost_main" name="Guides"
            sequence="10"
            action="action_landed_cost_guides"/>
    </data>
</openerp>
