<?xml version='1.0' encoding='utf-8' ?>
<openerp>
    <data>
        <!-- Guide Form View -->
        <record id="guide_form_view" model="ir.ui.view">
            <field name="name">stock.landed.cost.guide.form</field>
            <field name="model">stock.landed.cost.guide</field>
            <field name="arch" type="xml">
                <form string="Guide">
                    <header>
                        <button name="action_draft" type="object"
                            string="Reset to draft"
                            states="valid"
                            groups="typ_landed_cost.group_landed_guide_manager"/>
                        <button name="action_valid" type="object"
                            string="Validate"
                            states="draft"
                            class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string="Guide">
                        <div class="oe_right oe_button_box" name="buttons">
                            <button
                                type="object"
                                string="Stock Accruals"
                                name="view_accrual"
                                class="oe_stat_button"
                                icon="fa-truck"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group col="4">
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="warehouse_id"/>
                            <field name="journal_id"/>
                            <field name="reference"/>
                            <field name="currency_id"/>
                            <field name="landed_cost_id"/>
                            <field name="invoice_id" readonly='True'/>
                        </group>
                        <notebook>
                            <page string="Guide Lines">
                                <field name="line_ids" nolabel="1"/>
                                    <group>
                                        <group name="totals" class="oe_subtotal_footer oe_right">
                                            <field name="amount_total" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </group>
                                    </group>
                            </page>
                            <page string="Other info">
                                <group col="4">
                                    <field name="landed"/>
                                    <field name="invoiced" readonly='True'/>
                                    <field name="company_id"/>
                                    <field name="move_id"/>
                                    <field name="period_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Guide Tree View -->
        <record id="guide_tree_view" model="ir.ui.view">
            <field name="name">stock.landed.cost.guide.tree</field>
            <field name="model">stock.landed.cost.guide</field>
            <field name="arch" type="xml">
                <tree string="Guide">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="warehouse_id"/>
                    <field name="invoice_id"/>
                    <field name="date"/>
                    <field name="landed_cost_id"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                    <field name="reference"/>
                </tree>
            </field>
        </record>
        <record id="guide_search_view" model="ir.ui.view">
            <field name="name">stock.landed.cost.guide.tree</field>
            <field name="model">stock.landed.cost.guide</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="reference"/>
                    <field name="date"/>
                    <group string="Group by">
                        <filter name="by_journal" string="Journal"
                            context="{'group_by': 'journal_id'}"/>
                        <filter name="by_warehouse" string="Warehouse"
                            context="{'group_by': 'warehouse_id'}"/>
                        <filter name="by_partner" string="Partner"
                            context="{'group_by': 'partner_id'}"/>
                        <filter name="by_landed_cost" string="Landed Cost"
                            context="{'group_by': 'landed_cost_id'}"/>
                        <filter name="by_invoice" string="Invoice"
                            context="{'group_by': 'invoice_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- Guide Line Tree View -->
        <record id="guide_line_tree_view" model="ir.ui.view">
            <field name="name">stock.landed.cost.guide.line.tree</field>
            <field name="model">stock.landed.cost.guide.line</field>
            <field name="arch" type="xml">
                <tree string="Guide Line" editable="bottom">
                    <field
                        name="product_id"
                        domain="[('landed_cost_ok', '=', True)]"
                        />
                    <field name="cost"/>
                    <field name="freight_type"/>
                </tree>
            </field>
        </record>
        <!-- Inherited Landed Cost Form View -->
        <record id="main_form_view" model="ir.ui.view">
            <field name="name">stock.landed.cost.form</field>
            <field name="model">stock.landed.cost</field>
            <field
                name="inherit_id"
                ref="stock_landed_costs_average.view_stock_landed_cost_form"
                />
            <field name="arch" type="xml">
                <xpath expr='//field[@name="invoice_ids"]' position='after'>
                    <field
                        name="guide_ids"
                        widget="many2many_tags"
                        domain="[
                            ('state', '!=', 'draft'),
                        ]"
                        />
                </xpath>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_landed_cost_guides">
            <field name="name">Landed Cost Guides</field>
            <field name="res_model">stock.landed.cost.guide</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            id="menu_landed_cost_guides"
            parent="stock_landed_costs.menu_stock_landed_cost_main" name="Guides"
            sequence="10"
            action="action_landed_cost_guides"/>
    </data>
</openerp>
