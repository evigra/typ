<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="view_invoice_form_partner_onchange" model="ir.ui.view">
            <field name="name">invoice.form.partner.onchange</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Other Info']//group[last()]" position="after">
                    <separator string="Exchange Differential Adjust" colspan="4"/>
                    <group colspan="6" col='4'>
                        <field
                            name="exchange_landed_ids"
                            readonly="1"
                            nolabel="1"
                            >
                            <tree>
                                <field name='name'/>
                                <field name='date'/>
                                <field name='state'/>
                                <field name='amount_total'/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
