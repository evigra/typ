<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="product_adjusts_landed_cost_1" model="product.product">
        <field name="name">Average Product to Adjust with Landed Costs</field>
        <field name="cost_method">average</field>
        <field name="valuation">real_time</field>
        <field name="landed_cost_ok" eval="True"/>
        <field name="uom_id" ref="product.product_uom_unit"/>
        <field name="type">product</field>
        <field name="property_stock_account_input" ref="l10n_generic_coa.1_conf_a_expense"/>
        <field name="property_stock_account_output" ref="l10n_generic_coa.1_conf_o_income"/>
    </record>

    <!-- Purchase Order -->

    <record id="adjust_purchase_landed_1" model="purchase.order">
        <field name="name">Purchase Order Demo </field>
        <field name="partner_id" ref="base.res_partner_4"/>
        <field name="currency_id" ref="base.USD"/>
    </record>

    <!-- Purchase Order Lines-->

    <record id="po_adjust_purchase_landed_line_1" model="purchase.order.line">
        <field name="name">Purchase Order Demo Adjusts Line 1</field>
        <field name="order_id" ref="adjust_purchase_landed_1"/>
        <field name="product_id" ref="product_adjusts_landed_cost_1"/>
        <field name="product_uom" ref="product.product_uom_unit"/>
        <field name="product_qty">10</field>
        <field name="price_unit">40.0</field>
        <field name="date_planned">2015-05-08</field>
    </record>

</odoo>
