<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- purchase requisition -->
		<record id="purchase_requisition" model="workflow">
			<field name="name">Purchase Requisition Basic Workflow</field>
			<field name="osv">purchase.requisition</field>
			<field name="on_create">True</field>
		</record>
		<record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="purchase_requisition"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
        </record>
        <record id="act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="purchase_requisition"/>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="flow_stop">True</field>
            <field name="action">write({'state':'cancel'})</field>
            <field name="signal_send">subflow.pur_requisition_cancel</field>
        </record>
        <record id="act_done" model="workflow.activity">
            <field name="wkf_id" ref="purchase_requisition"/>
            <field name="name">done</field>
            <field name="action">action_requisition_done()</field>
            <field name="kind">function</field>
            <field name="flow_stop">True</field>
            <field name="signal_send">subflow.pur_requisition_done</field>
<!--             <field name="join_mode">AND</field> -->
        </record>
        <!-- purchase requisition transition -->
        <record id="trans_draft_cancelled" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_cancel"/>
            <field name="signal">requisition_cancel</field>
        </record>
        
        <record id="trans_draft_done" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_done"/>
            <field name="signal">requisition_done</field>
        </record>
		<!-- procurement -->

		<record id="act_requisition" model="workflow.activity">
			<field name="wkf_id" ref="procurement.wkf_procurement" />
			<field name="name">requisition</field>
			<field name="kind">subflow</field>
			<field name="subflow_id" search="[('osv','=','purchase.requisition')]" />
			<field name="action">action_pr_assign()</field>
		</record>

		<record id="purchase.trans_confirm_mto_purchase" model="workflow.transition">
			<field name="act_from" ref="procurement.act_confirm_mto" />
			<field name="act_to" ref="purchase.act_buy" />
			<field name="condition">not check_requisition() and check_buy() and check_supplier_info()</field>
		</record>

		<record id="trans_confirm_mto_requisition" model="workflow.transition">
			<field name="act_from" ref="procurement.act_confirm_mto" />
			<field name="act_to" ref="act_requisition" />
			<field name="condition">check_requisition() and check_buy() and check_supplier_info()</field>
		</record>
		
		<record id="trans_req_done" model="workflow.transition">
            <field name="act_from" ref="act_requisition"/>
            <field name="act_to" ref="procurement.act_make_done"/>
            <field name="signal">subflow.pur_requisition_done</field>
        </record>
        
        <record id="trans_req_cancel" model="workflow.transition">
            <field name="act_from" ref="act_requisition"/>
            <field name="act_to" ref="procurement.act_cancel"/>
            <field name="signal">subflow.pur_requisition_cancel</field>
        </record>
	</data>
</openerp>