<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_pos_state_from" model="ir.ui.view">
        <field name="name">pos.order.state.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <button name="action_pos_order_invoice" position="after">
                <button name="action_pos_order_cancel" string="Cancel" type="object" states="draft"/>
            </button>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible" translation="off">draft,paid,done,cancel</attribute>
            </xpath>
        </field>
    </record>
</odoo>
