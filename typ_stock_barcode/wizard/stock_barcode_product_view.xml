<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_barcode_notracking_form" model="ir.ui.view">
        <field name="name">stock.barcode.notracking.form</field>
        <field name="model">stock.barcode.notracking</field>
        <field name="arch" type="xml">
            <form>
                <field name="picking_id" invisible="1"/>
                <field name="default_move_id" invisible="1"/>
                <group>
                    <field name="product_id" readonly="1" force_save="1"/>
                </group>
                <group>
                    <field name="qty_done"/>
                </group>
                <field name="_barcode_scanned" widget="no_tracking_barcode_handler"/>
                <field name="stock_barcode_product_line_ids">
                    <tree editable="bottom" create="false" options="{'no_open': True}">
                        <field name="qty_done"/>
                        <field name="qty_reserved" readonly="1"/>
                        <field name="line_product_barcode" readonly="1"/>
                        <field name="move_line_id" invisible="1"/>
                    </tree>
                </field>
                <footer>
                        <button name="validate_product_set" type="object" string="Validate Product Set" class="btn-primary" barcode_trigger="validate"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="view_stock_barcode_product_line_kanban" model="ir.ui.view">
        <field name="name">stock.barcode.product.line.kanban</field>
        <field name="model">stock.barcode.product.line</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card">
                            <div class="row">
                                <div class="col-xs-3">
                                    <span>Done</span>
                                </div>
                                <div class="col-xs-3">
                                    <span>Reserved</span>
                                </div>
                                <div class="col-xs-6">
                                    <span>Barcode</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-3">
                                    <field name="qty_done"/>
                                </div>
                                <div class="col-xs-3">
                                    <field name="qty_reserved"/>
                                </div>
                                <div class="col-xs-6">
                                    <field name="line_product_barcode"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
