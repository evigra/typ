<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_line_kanban_limit" model="ir.ui.view">
        <field name="name">stock.move.line.kanban.limit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_kanban"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="limit">1000</attribute>
                <attribute name="create">false</attribute>
            </xpath>
            <xpath expr="//t[@t-name='kanban-box']" position="replace">
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_card oe_kanban_global_click" t-attf-style="#{record.qty_done.raw_value == 0.0 ? 'background-color: #d9edf7;' : record.qty_done.raw_value &gt; 0.0 &amp; record.qty_done.raw_value &lt; record.product_uom_qty.raw_value ? 'background-color: #fcf8e3;' : record.qty_done.raw_value == record.product_uom_qty.raw_value ? 'background-color: #dff0d8;' : ''}">
                        <strong class="o_kanban_record_title"><span><field name="product_id"/></span></strong>
                        <field name="picking_id" invisible="1"/>
                        <div class="row">
                            <div class="col-xs-6">
                                <field name="lots_visible" invisible="1"/>
                                <field name="lot_id" attrs="{'invisible': [('lots_visible', '=', False), ('parent.show_lots_text', '=', True)]}" domain="[('product_id', '=', product_id)]" groups="stock.group_production_lot" context="{'default_product_id': product_id, 'active_picking_id': picking_id}"/>
                                <field name="lot_name" attrs="{'invisible': [('lots_visible', '=', False), ('parent.show_lots_text', '=', False)]}" groups="stock.group_production_lot"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 text-left">
                                <field name="product_barcode" invisible="1"/>
                                <field name="location_processed" invisible="1"/>
                                <field name="result_package_id" invisible="1"/>
                                <field name="qty_done" invisible="1"/>
                                <field name="initial_demand_qty" invisible="1" string="Initial Demand"/>
                                <field name="product_uom_qty" invisible="1" string="Quantity Reserved"/>
                                <span>
                                    I:<t t-esc="record.initial_demand_qty.raw_value"/>
                                </span>
                                <field name="product_uom_id" string="Unit of Measure" groups="product.group_uom"/>
                            </div>
                            <div class="col-xs-4 text-left">
                                <span>
                                    R:<t t-esc="record.product_uom_qty.raw_value"/>
                                </span>
                                <field name="product_uom_id" string="Unit of Measure" groups="product.group_uom"/>
                            </div>
                            <div class="col-xs-4 text-left">
                                <span>
                                    H:<t t-esc="record.qty_done.raw_value"/>
                                </span>
                                <field name="product_uom_id" string="Unit of Measure" groups="product.group_uom"/>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </field>
    </record>
    <record id="view_stock_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <label for="progress_char"/>
                <div>
                    <field name="progress_char"/>
                    <field name="progress" widget="progressbar" class="oe_inline"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
