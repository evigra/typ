<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>

        <record id="view_account_voucher_lines_dr_tax" model="ir.ui.view">
                <field name="name">view.account.voucher.lines.dr.tax</field>
                <field name="model">account.voucher</field>
                <field name="inherit_id" ref="account_voucher_tax.view_account_voucher_lines_dr"/>
                <field name="priority">100</field>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='line_cr_ids']/tree" position="attributes">
                        <attribute name="editable">bottom</attribute>
                    </xpath>
                    <xpath expr="//field[@name='line_cr_ids']/tree/field[@name='tax_line_ids']" position="attributes">
                        <attribute name="widget">many2many_tags</attribute>
                    </xpath>
                    <xpath expr="//field[@name='line_dr_ids']/tree" position="attributes">
                        <attribute name="editable">bottom</attribute>
                    </xpath>
                    <xpath expr="//field[@name='line_dr_ids']/tree/field[@name='tax_line_ids']" position="attributes">
                        <attribute name="widget">many2many_tags</attribute>
                    </xpath>
                </field>
        </record>

        <record id="view_account_voucher_lines_dr_payment_tax" model="ir.ui.view">
