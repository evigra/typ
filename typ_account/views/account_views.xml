<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form_inherit" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="l10n_mx_address_issued_id" position="attributes">
                <field name="update_posted" groups="base.group_no_one"/>
                <attribute name="attrs">{'invisible':  [('type', 'not in', ('sale', 'bank'))]}</attribute>
            </field>
        </field>
    </record>
    <menuitem id="account.menu_finance_entries" name="Adviser" parent="account.menu_finance" sequence="4" groups="account.group_account_user,res_group_account_adviser"/>
    <menuitem action="account.action_account_moves_all_a" id="account.menu_action_account_moves_all"
        parent="account.menu_finance_entries_accounting_entries" sequence="10" groups="account.group_account_manager,res_group_account_adviser"/>
    <menuitem name="Analytic Entries" parent="account.menu_finance_entries_accounting_entries" action="analytic.account_analytic_line_action_entries"
        id="account.menu_action_analytic_lines_tree" sequence="35" groups="analytic.group_analytic_accounting,res_group_account_adviser"/>
    <menuitem action="account.action_move_journal_line" id="account.menu_action_move_journal_line_form"
        parent="account.menu_finance_entries_accounting_entries" groups="account.group_account_user,res_group_account_adviser" sequence="2"/>

    <menuitem id="account_reports_management_menu" name="Management" parent="account.menu_finance_receivables" sequence="4"/>
    <menuitem name="Invoices" action="account.action_account_invoice_report_all" id="menu_action_account_invoice_report_all"
        parent="typ_account.account_reports_management_menu" sequence="1"
        groups="res_group_invoices_report"/>
</odoo>
