<?xml version='1.0' encoding='UTF-8'?>
<odoo>
        <record id="view_origin_account_invoice_filter_inherit" model="ir.ui.view">
            <field name="name">origin.account.invoice.filter.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='number']" position="before">
                    <field name="origin"/>
                </xpath>
            </field>
        </record>
        <record id="view_invoice_form_partner_onchange" model="ir.ui.view">
            <field name="name">invoice.form.partner.onchange</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_due']" position="after">
                    <field name="date_paid" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_invoice_validation_date" model="ir.ui.view">
            <field name="name">invoice.validation.date</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="validation_date"/>
                </xpath>
                <field name="reference" position="after">
                    <field name="supplier_invoice_number"/>
                </field>
            </field>
        </record>

        <record id="account_invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sale.account_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="attrs" translation="off">{'readonly':[('state', '!=', 'draft')]}</attribute>
                </xpath>
                <button name="action_invoice_cancel" position="attributes">
                    <attribute name="groups" translation="off">typ_account.res_group_cancel_invoice</attribute>
                </button>
                <button name="%(account.action_account_invoice_refund)d" position="attributes">
                    <attribute name="groups" translation="off">typ_account.res_group_button_credit_note</attribute>
                </button>
            </field>
        </record>
        <record id="account_invoice_form_group" model="ir.ui.view">
            <field name="name">account.invoice.form.group</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sale.account_invoice_form"/>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="attrs" translation="off">{'readonly': 0}</attribute>
                </xpath>
            </field>
        </record>
        <record id="account_invoice_customer_tree_view_inherit" model="ir.ui.view">
            <field name="name">account.invoice.customer.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="team_id"/>
                </field>
                <field name="amount_total_signed" position="before">
                    <field name="amount_untaxed"/>
                </field>
                <field name="currency_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
            </field>
        </record>
        <record id="account_invoice_supplier_tree_view_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_tree"/>
            <field name="arch" type="xml">
                <field name="amount_total_signed" position="before">
                    <field name="team_id"/>
                    <field name="amount_untaxed"/>
                </field>
                <field name="currency_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
            </field>
        </record>
</odoo>
