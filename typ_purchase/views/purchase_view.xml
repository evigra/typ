<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_origin_purchase_orden_search_inherit" model="ir.ui.view">
            <field name="name">origin.purchase.order.search.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="origin"/>
                </xpath>
            </field>
        </record>

        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_approve']" position="attributes">
                    <attribute name="groups" translation="off">purchase.group_purchase_manager,typ_purchase.purchase_group_approve_order_button</attribute>
                </xpath>
                <xpath expr="//field[@name='picking_type_id']" position="attributes">
                    <attribute name="domain" translation="off">[('code', '=', 'incoming'), ('default_location_src_id.usage', '=', 'supplier')]</attribute>
                </xpath>
                <field name="picking_type_id" position="before">
                    <field name="broker_id"/>
                </field>
            </field>
        </record>

        <!-- Hides "Create" and "Confirm" Button to a Group -->
        <record id="purchase_order_hide_button_form" model="ir.ui.view">
            <field name="name">purchase.order.form.hide_button</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('typ_purchase.purchase_group_hidden_create_button')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create" translation="off">false</attribute>
                </xpath>
                <xpath expr="//button[@name='button_confirm']" position="attributes">
                    <attribute name="invisible" translation="off">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="purchase_order_hide_button_tree" model="ir.ui.view">
            <field name="name">purchase.order.tree.hide_button</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="groups_id" eval="[(6, 0, [ref('typ_purchase.purchase_group_hidden_create_button')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create" translation="off">false</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_state_purchase_order_search_inherit" model="ir.ui.view">
            <field name="name">state.purchase.order.search.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
            <xpath expr="//filter[@name='draft']" position="before">
                    <filter name="Orders" string="Orders" domain="[('state', '!=', 'cancel')]" context="{}"/>
            </xpath>
                <xpath expr="//group" position="inside">
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                </xpath>
            </field>
        </record>

       <record id="purchase.purchase_rfq" model="ir.actions.act_window">
            <field name="context">{'search_default_Orders':1}</field>
       </record>

        <record id="purchase.purchase_form_action" model="ir.actions.act_window">
            <field name="context">{'search_default_Orders':1}</field>
        </record>

        <record id="view_create_date_purchase_order_form" model="ir.ui.view">
            <field name="name">create_date.purchase.order.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <field name="date_order" position="before">
                    <field name="create_date"/>
                    <field name="shipment_date"/>
                    </field>
               <field name="create_date" position="attributes">
                    <attribute name="readonly" translation="off">True</attribute>
                </field>
                <field name="shipment_date" position="attributes">
                    <attribute name="required" translation="off">True</attribute>
                </field>
                <field name="date_order" position="replace">
                    <field name="date_order" invisible="1"/>
                </field>

               <xpath expr="//field[@name='order_line']/tree/field[@name='date_planned']" position="before">
                    <field name="shipment_date" />
                </xpath>

                <field name="order_line" position="attributes">
                        <attribute name="context" translation="off">{'shipment_date': shipment_date}</attribute>
                </field>

                <xpath expr="//field[@name='origin']" position="attributes">
                    <attribute name="attrs" translation="off"></attribute>
                </xpath>
            </field>
        </record>

        <record id="view_create_date_purchase_order_tree" model="ir.ui.view">
        <field name='name'>create_date.purchase.order.tree</field>
        <field name='model'>purchase.order</field>
        <field name='inherit_id' ref='purchase.purchase_order_tree'/>
        <field name='type'>tree</field>
        <field name='arch' type='xml'>
            <field name="date_planned" position="replace">
            </field>
            <field name="name" position="after">
                <field name="partner_ref"/>
            </field>
            <field name="date_order" position="before">
                <field name="create_date"/>
                <field name="shipment_date"/>
                <field name="date_planned"/>
            </field>
            <field name="date_order" position="replace">
                <field name="date_order" invisible="1"/>
            </field>
        </field>
       </record>

        <record id="view_buyer_assignment_form" model="ir.ui.view">
            <field name="name">buyer.assignment.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="buyer"/>
                </field>
            </field>
        </record>

        <record id="view_buyer_purchase_order_filter" model="ir.ui.view">
            <field name="name">buyer.purchase.order.filter</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <filter string="Buyer" domain="[]" context="{'group_by':'buyer'}"/>
                </xpath>
            </field>
        </record>

        <record id="view_requisition_budget_form" model="ir.ui.view">
            <field name="name">requisition.budget.form</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
               <button name="%(purchase_requisition.action_purchase_requisition_to_so)d" position="attributes">
                    <attribute name="groups" translation="off">typ_purchase.group_purchase_budget_manager</attribute>
               </button>
            </field>
        </record>
        <record id="view_purchase_order_inherit" model="ir.ui.view">
            <field name="name">purchase.order.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="attrs" translation="off">
                        {'readonly':[('state', 'not in', ['sent', 'bid', 'draft'])]}</attribute>
                </xpath>
            </field>
        </record>
        <record id="purchase_order_line_search_inherit" model="ir.ui.view">
            <field name="name">purchase.order.line.search.inherit</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='hide_cancelled']" position="after">
                    <filter name="hide_order_cancelled" string="Hide lines in cancelled orders" domain="[('order_id.state', '!=', 'cancel')]"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
