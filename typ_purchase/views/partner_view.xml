<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Hides "Create" Button to a Group -->
        <record id="partner_hidden_button_form" model="ir.ui.view">
            <field name="name">partner.form.hide_button</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('typ_purchase.partner_group_hidden_create_button')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create" translation="off">false</attribute>
                </xpath>
            </field>
        </record>
        <record id="partner_hidden_button_tree" model="ir.ui.view">
            <field name="name">partner.tree.hide_button</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="groups_id" eval="[(6, 0, [ref('typ_purchase.partner_group_hidden_create_button')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="create" translation="off">false</attribute>
                </xpath>
            </field>
        </record>
        <record id="partner_hidden_button_kanban" model="ir.ui.view">
            <field name="name">partner.kanban.hide_button</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="groups_id" eval="[(6, 0, [ref('typ_purchase.partner_group_hidden_create_button')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="create" translation="off">false</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
