<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id='typ_purchase.report_purchaseorder_document' inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-call='report.external_layout']" position="replace">
            <t t-call="typ_purchase.external_layout">
                <div class="page">
                    <h3 class="text-right">Purchase Order NÂ° <span t-field="o.name"/></h3>
                    <div class="row">
                        <div class="col-xs-4">
                            <strong>Invoice address:</strong>
                            <div t-if="o.company_id.partner_id">
                                <div t-field="o.company_id.partner_id"
                                    t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                                <span>VAT</span>: <span t-field="o.company_id.partner_id.vat_split"/>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <strong>Shipping address:</strong>
                            <div t-if="o.broker_id">
                                <div t-field="o.broker_id"
                                    t-field-options='{"widget": "contact", "no_marker": true}'/>
                            </div>
                            <t t-if="not o.broker_id">
                                <div t-if="o.dest_address_id">
                                    <div t-field="o.dest_address_id"
                                        t-field-options='{"widget": "contact", "no_marker": true}'/>
                                </div>
                                <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                                    <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                        t-field-options='{"widget": "contact", "no_marker": true}'/>
                                </div>
                            </t>
                        </div>
                        <div class="col-xs-4">
                            <strong>Partner:</strong>
                            <div t-field="o.partner_id"
                                t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                            <p t-if="o.partner_id.vat"><span>VAT</span>: <span t-field="o.partner_id.vat_split"/></p>
                        </div>
                    </div>
                    <div class="row mt32 mb32 text-center">
                        <div t-if="o.name" class="col-xs-3">
                            <strong>Our Order Reference:</strong>
                            <p t-field="o.name"/>
                        </div>
                        <div t-if="o.currency_id" class="col-xs-3">
                            <strong>Currency:</strong>
                            <p>
                                (<span t-esc="o.currency_id and o.currency_id.symbol or ''"/>)
                                <span t-field="o.currency_id.name"/>
                            </p>
                        </div>
                        <div t-if="o.create_date" class="col-xs-3">
                            <strong>Created on:</strong>
                            <p t-field="o.create_date"/>
                        </div>
                        <div t-if="o.validator" class="col-xs-3">
                            <strong>Validated By:</strong>
                            <p t-field="o.validator"/>
                        </div>
                    </div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th class="text-center"><strong>Shipment Date</strong></th>
                                <th><strong>Product Code</strong></th>
                                <th><strong>Provider Code / Description</strong></th>
                                <th class="text-right"><strong>Quantity</strong></th>
                                <th class="text-right"><strong>Unit Price</strong></th>
                                <th class="text-right"><strong>Net Price</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="line">
                                <td class="text-center">
                                    <span t-field="line.shipment_date"/>
                                </td>
                                <td>
                                    <span t-field="line.product_id.default_code"/>
                                </td>
                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <t t-if="o.notes">
                        <h3>Notes:</h3>
                        <p t-field="o.notes"/>
                    </t>
                </div>
            </t>
        </xpath>
    </template>

    <template id="report_purchaseorder" inherit_id="purchase.report_purchaseorder">
        <xpath expr="//t[@t-call='report.html_container']" position="replace">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'report_lang', 'purchase.report_purchaseorder_document')"/>
                </t>
            </t>
        </xpath>
    </template>

    <record id="purchase.action_report_purchase_order" model="ir.actions.report.xml">
        <field name="paperformat_id" ref="typ_purchase.paperformat_purchase_order"/>
    </record>
</odoo>
