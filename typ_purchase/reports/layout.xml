<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="typ_purchase.custom_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
        <t t-call="typ_purchase.custom_external_layout_background"><t t-raw="0"/></t>
    </template>
    <template id="typ_purchase.custom_external_layout_with_address">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>
        <t t-call="typ_purchase.custom_external_layout_background_with_address"><t t-raw="0"/></t>
    </template>

    <template id="typ_purchase.custom_external_layout_background">
        <div class="header">
            <div class="row">
                <div class="col-xs-3" style="padding-top: 20px;">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" class="pull-left" style="max-height: 90px;"/>
                </div>
                <div class="col-xs-9" style="padding-top: 25px;">
                    <h3 class="text-center" t-field="company.name"/>
                </div>
            </div>
            <div class="clearfix mb8"/>
        </div>
        <div class="article">
            <t t-raw="0" />
        </div>
        <div class="footer" style="border-top: 1px solid #ccc; padding-top: 10px;">
            <div class="text-center">
                <span>Phone</span>: <span t-field="company.phone"/>
                | <span>Email</span>: <span t-field="company.email_purchase"/>
                | <span>Website</span>: <span t-field="company.website"/>
                <br/>
                <span>Contact</span>: <span t-field="user.name"/>
                | <span>Email</span>: <span t-field="user.email"/>
            </div>
            <ul class="list-inline hidden-md hidden-lg hidden-sm text-right">
                <li>Page:</li>
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
        </div>
    </template>
    <template id="typ_purchase.custom_external_layout_background_with_address">
        <div class="header">
            <div class="row">
                <div class="col-xs-12" style="padding-top: 20px;">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" class="pull-left" style="max-height: 90px; margin-right: 10px;"/>
                    <t t-set="address" t-value="o.company_id"/>
                    <address t-if="address" style="font-size: 12px; line-height: 13px;">
                        <i class="fa fa-map-marker"/>
                        <strong><t t-esc="address.name or ''"/></strong><br/>
                        <t t-if="address.vat">
                            <span>VAT</span>: <span t-raw="address.partner_id.vat"/><br/>
                        </t>
                        <t t-if="address.street">
                            <span t-raw="address.street"/>
                        </t>
                        <br/>
                        <t t-if="address.l10n_mx_edi_colony">
                            <span t-raw="address.l10n_mx_edi_colony"/>
                        </t>
                        <t t-if="address.l10n_mx_edi_colony and address.city"><span>,</span></t>
                        <t t-if="address.city">
                            <span t-raw="address.city"/>
                        </t>
                        <br/>
                        <t t-if="address.state_id">
                            <span t-raw="address.state_id.name"/>
                        </t>
                        <t t-if="address.country_id">
                            <span t-raw="address.country_id.name"/>
                        </t>
                        <t t-if="address.zip">
                            <span t-raw="address.zip"/>
                        </t>
                        <br/>
                        <t t-if="address.email">
                            <i class="fa fa-envelope"/>
                            <span class="text-muted" style="font-size: 12px; line-height: 13px;" t-raw="address.email"/>
                        </t>
                        <br/>
                        <t t-if="address.phone">
                            <i class="fa fa-phone"/>
                            <span class="text-muted" style="font-size: 12px; line-height: 13px;" t-raw="address.phone"/>,
                        </t>
                    </address>
                </div>
            </div>
            <div class="clearfix mb8"/>
        </div>
        <div class="article">
            <t t-raw="0" />
        </div>
        <div class="footer" style="border-top: 1px solid #ccc; padding-top: 10px;">
            <div class="text-center">
                <span>Phone</span>: <span t-field="company.phone"/>
                | <span>Email</span>: <span t-field="company.email_purchase"/>
                | <span>Website</span>: <span t-field="company.website"/>
                <br/>
                <span>Contact</span>: <span t-field="user.name"/>
                | <span>Email</span>: <span t-field="user.email"/>
            </div>
            <ul class="list-inline hidden-md hidden-lg hidden-sm text-right">
                <li>Page:</li>
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
        </div>
    </template>
</odoo>
