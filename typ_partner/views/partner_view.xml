<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="view_partner_form_pricelists_available" model="ir.ui.view">
            <field name="name">partner.form.pricelists.available</field>
            <field name="model">res.partner</field>
            <field name="groups_id" eval="[(4, ref('product.group_sale_pricelist')), (4, ref('product.group_purchase_pricelist'))]"/>
            <field name="inherit_id" ref="product.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Sales &amp; Purchases']" position="inside">
                    <separator string="Pricelist's partner"/>
                    <field name="pricelist_ids"/>
                </xpath>
            </field>
        </record>

        <record id='view_partner_form_buyer_assignment' model='ir.ui.view'>
            <field name='name'>partner.form.buyer.assignment</field>
            <field name='model'>res.partner</field>
            <field name='inherit_id' ref='base.view_partner_form'/>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                    <field name="user_id" position="after">
                            <field name="buyer_id"/>
                    </field>
            </field>
        </record>

        <record id="view_res_partner_filter_buyer" model="ir.ui.view">
            <field name="name">res.partner.filter.buyer</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                    <group>
                            <filter string="buyer" icon="terp-partner" domain="[]" context="{'group_by': 'buyer_id'}" />
                    </group>
            </field>
        </record>

        <record id='view_partner_tree_credit_info' model='ir.ui.view'>
            <field name='name'>partner.tree.credit.info</field>
            <field name='model'>res.partner</field>
            <field name='inherit_id' ref='base.view_partner_tree'/>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree>
                    <field name="property_payment_term"/>
                    <field name="property_supplier_payment_term"/>
                    <field name="credit_limit"/>
                </tree>
            </field>
        </record>

        <record id="base.action_partner_form_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">kanban</field>
        </record>

        <record id="base.action_partner_form_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
        </record>

        <record id="base.action_partner_tree_view1" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">tree</field>
        </record>

    </data>
</openerp>
