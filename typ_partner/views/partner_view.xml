<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="view_partner_form_pricelists_available" model="ir.ui.view">
            <field name="name">partner.form.pricelists.available</field>
            <field name="model">res.partner</field>
            <field name="groups_id" eval="[(4, ref('product.group_sale_pricelist')), (4, ref('product.group_purchase_pricelist'))]"/>
            <field name="inherit_id" ref="product.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Sales &amp; Purchases']" position="inside">
                    <separator string="Pricelist's partner"/>
                    <field name="pricelist_ids"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
