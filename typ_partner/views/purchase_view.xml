<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="view_purchase_form_onchange_partner" model="ir.ui.view">
            <field name="name">purchase.form.onchange.partner</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="domain" translation="off">[('partner_ids', 'in', partner_id), ('type', '=', 'purchase')]</attribute>
                </xpath>
           </field>
        </record>

    </data>
</openerp>
