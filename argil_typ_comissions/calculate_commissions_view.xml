<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<!-- ############################### VISTA FORMULARIO PARA LOS PARAMETROS ###############################    -->

       <record model="ir.ui.view" id="p_comission_config_form">
            <field name="name">comission.config.form</field>
            <field name="model">comission.config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Comissions Parameters" version="7.0">

                <header>

                </header>

                <sheet>
                     <group>
                        <field name="name" />
                    </group>
                    <h1>
                      <label string="Parameters"/>
                    </h1>


                    <!-- <separator string="Iva Nominal Percentage Before" /> -->
                    <notebook colspan="4" >
                        <page string="Calculo en Base a Margenes" >
                            <field name="nominal_lines_ids" >
                                <tree string="Calculo Comisiones">
                                    
                                    <field name="margin_percentage_initial" />
                                    <field name="margin_percentage_final" />
                                    <field name="percentage" />
                                    <field name="final_day" />
                                    <field name="general" />
                                </tree>
                                <form string="Calculo de Comisiones" version="7.0">
                                    <h3>Margenes de Venta para la Comision</h3>
                                    <group col="4">
                                        <field name="margin_percentage_initial" />
                                        <field name="margin_percentage_final" />
                                    <field name="percentage" />
                                    <field name="final_day" />
                                    
                                    <field name="general" />
                                    <field name="special_calculate" />
                                    </group>
                                    <group>
                                        <field name="product_category_ids" widget="many2many_tags"/>
                                        <field name="detail_comission" attrs="{'invisible':[('general','=',False)],'required':[('general','=',True)]}"/>
                                    </group>
                                    <notebook>
                                        <page string="Codigo Python" attrs="{'invisible':[('special_calculate','=',False)]}">
                                            <field name="python_code" attrs="{'required':[('special_calculate','=',True)]}"/>
                                        </page>
                                        <page string="Notas">
                                            <field name="name" />
                                        </page>
                                    </notebook>
                                    
                                </form>
                            </field>
                        </page>
                    </notebook>
                    
                    <group >
                        <field name="company_nominal_ids" widget="many2many_tags"/>
                    </group>

                </sheet>
                </form>
            </field>
        </record>

    <record model="ir.actions.act_window" id="comission_config_action_00">
        <field name="name">Parametros para Comisiones</field>
        <field name="res_model">comission.config</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>    

         <menuitem id="menu_reports_pssoft" name="Comisiones" parent="account.menu_finance" sequence="3"/>

          <menuitem name="Parametros" id="comission_config_form_00" action="comission_config_action_00" parent="menu_reports_pssoft" sequence="10"/>
<!-- ####################################################################################################    -->


    </data>
</openerp>