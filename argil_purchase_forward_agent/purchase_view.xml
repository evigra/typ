<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- purchase order -->
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Brokers Log"
                        attrs="{'invisible':[('country_name','=','Mexico')]}">
                        <field name="country_name" invisible="1"/>
                        <field name="broker_log_ids" attrs="{'readonly':[('state','=','cancel')]}"/>
                    </page>
                </notebook>
            </field>
        </record>

        <!-- brokers log -->
        <record id="purchase_order_broker_log_form" model="ir.ui.view">
            <field name="name">purchase.order.broker_log.form</field>
            <field name="model">purchase.order.broker_log</field>
            <field name="arch" type="xml">
                <form string="Broker Log" version="7.0">
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="customs_port"/>
                        </group>
                        <group>
                            <field name="date_arrival" on_change="change_date(date_arrival,date_departure)"/>
                            <field name="date_departure" on_change="change_date(date_arrival,date_departure)"/>
                            <field name="time_custom" widget="float_time"
                                invisible="1" />
                        </group>
                    </group>
                    <separator string="Notes" />
                    <field name="notes" />
                </form>
            </field>
        </record>
        <record id="purchase_order_broker_log_tree" model="ir.ui.view">
            <field name="name">purchase.order.broker_log.tree</field>
            <field name="model">purchase.order.broker_log</field>
            <field name="arch" type="xml">
                <tree string="Broker Log">
                    <field name="partner_id" />
                    <field name="customs_port"/>
                    <field name="date_arrival" />
                    <field name="date_departure" />
                    <field name="time_custom" widget="float_time" />
                </tree>
            </field>
        </record>
    </data>
</openerp>