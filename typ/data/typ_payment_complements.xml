<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.rule" id="ir_typ_payment_from_sale_team">
        <field name="name">payment from sale team</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[
            '|', '|',
            ('journal_id', 'in', [journal.id  for team in user.sale_team_ids for journal in team.journal_team_ids]),
            ('journal_id.section_id', '=', False),('partner_id', '=', user.partner_id.id),
        ]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_create" eval="True"/>
    </record>
</odoo>
