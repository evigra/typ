    </record>

    <record id="group_invoiced_without_pedimento" model="res.groups">
      <field name="name">Users that can invoiced a sale order without pedimento in entry quants</field>
      <field name="comment">This group can invoiced a sale order without pedimento in entry quants.</field>
    </record>

    <record id="res_group_cost_audit" model="res.groups">
      <field name="name">Users who can audit costs</field>
    </record>

    <record id="res_group_modify_price_sale" model="res.groups">
        <field name="name">Modify price of sale in sale order</field>
        <field name="comment">Users can modify price of sale in sale orders</field>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

    <record id="res_group_product_customer_code" model="res.groups">
        <field name="name">Users can see product customer code field</field>
        <field name="comment">This group can see product customer code field</field>
    </record>
