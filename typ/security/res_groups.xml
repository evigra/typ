    <record id="group_validate_landed" model="res.groups">
        <field name="name">Validate Landed Costs</field>
        <field name="comment">Users can validate landed xosts</field>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>
    
    <record model="res.groups" id="group_sale_order_invoice_payment_term_manager">
        <field name="name">Sale order - Invoice - payment term manager</field>
        <field name="comment">This group has access to modify field payment term in Sale Orders and Invoices.</field>
    </record>

    <record model="res.groups" id="group_res_partner_warehouse_manager">
        <field name="name">Partner warehouse configuration manager</field>
        <field name="comment">This group can register partner warehouse configurations.</field>
    </record>

    <record id="res_group_can_sell_below_minimum_margin" model="res.groups">
      <field name="name">Users that can sell below the minimum margin</field>
