    <record id="rule_account_move_by_sale_team" model="ir.rule">
        <field
            name="name"
        >Limited access to Journal Entry (filtered by sale teams)</field>
        <field name="model_id" ref="model_account_move" />
        <field name="domain_force">[
            '|',
            ('journal_id', 'in', user.sale_team_ids.journal_team_ids.ids),
            ('journal_id.section_id', '=', False),
        ]</field>
    </record>
    <record id="rule_account_move_line_by_sale_team" model="ir.rule">
        <field
            name="name"
        >Limited access to Journal Item (filtered by sale teams)</field>
        <field name="model_id" ref="model_account_move_line" />
        <field name="domain_force">[
            '|', '|',
            ('journal_id', '=', False),
            ('journal_id', 'in', user.sale_team_ids.journal_team_ids.ids),
            ('journal_id.section_id', '=', False),
