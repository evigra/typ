<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="_assets_primary_variables" inherit_id="web._assets_primary_variables">
        <xpath expr="//link[last()]" position="after">
            <link
                href="/typ/static/src/scss/variables.scss"
                rel="stylesheet"
                type="text/scss"
            />
        </xpath>
    </template>

    <template
        id="assets_frontend"
        inherit_id="website.assets_frontend"
        name="Assets Frontend"
    >
        <xpath expr="//script[last()]" position="after">
            <!-- TODO migrate to 14.0 (frontend team)
            <script type="text/javascript" src="/typ/static/src/js/portal_account.js" />
            <script
                type="text/javascript"
                src="/typ/static/src/js/edit_information.js"
            />
            <script type="text/javascript" src="/typ/static/src/js/shipping.js" />
            <script type="text/javascript" src="/typ/static/src/js/favorites.js" />
            <script type="text/javascript" src="/typ/static/src/js/share.js" />
            <script type="text/javascript" src="/typ/static/src/js/cart.js" />
            <script
                type="text/javascript"
                src="/typ/static/src/js/download_catalog.js"
            />
            -->
        </xpath>
        <xpath expr="//link[last()]" position="after">
            <link
                href="/typ/static/src/scss/main.scss"
                rel="stylesheet"
                type="text/scss"
            />
        </xpath>
    </template>

    <template id="assets_common" inherit_id="web.assets_common">
        <xpath expr="." position="inside">
            <script
                type="text/javascript"
                src="/typ/static/src/js/tours/lead_from_product_tour.js"
            />
        </xpath>
    </template>

    <template id="assets_report_common" inherit_id="web.report_assets_common">
        <xpath expr="//link[last()]" position="after">
            <link
                href="/typ/static/src/scss/report_templates.scss"
                type="text/scss"
                rel="stylesheet"
            />
        </xpath>
    </template>

</odoo>
