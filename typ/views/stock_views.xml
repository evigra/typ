<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock.stock_picking_type_action" model="ir.actions.act_window">
        <field name="limit">15</field>
    </record>


    <menuitem
        action="stock.stock_picking_type_action"
        id="stock.stock_picking_type_menu"
        parent="stock.menu_stock_root" sequence="20"
        name="Dashboard"/>

    <record id='view_stock_landed_cost_form' model='ir.ui.view'>
        <field name="name">stock.landed.cost.form</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_validate']" position="attributes">
               <attribute name="groups">typ.group_validate_landed</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_stock_move_line_kanban_limit" model="ir.ui.view">
        <field name="name">stock.move.line.kanban.limit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="typ_stock_barcode.view_stock_move_line_kanban_limit"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <field name="picking_id" position="after">
                <field name="posx" invisible="1"/>
                <field name="posy" invisible="1"/>
                <field name="posz" invisible="1"/>
                <span t-if="record.posx.raw_value || record.posy.raw_value || record.posz.raw_value">
                    Ubication
                    <t t-if="record.posx.raw_value" t-esc="record.posx.raw_value"/> <t t-if="record.posy.raw_value" t-esc="record.posy.raw_value"/> <t t-if="record.posz.raw_value" t-esc="record.posz.raw_value"/>
                </span>
            </field>
        </field>
    </record>
    <record id="attachment_tree_action2" model="ir.actions.act_window">
        <field name="name">Landed Costs Attachments</field>
        <field name="res_model">ir.attachment</field>
        <field name="domain">[("res_model","=","stock.landed.cost")]</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        action="typ.attachment_tree_action2"
        id="typ.attachment_tree_type_menu"
        parent="stock.menu_warehouse_report" sequence="60"
        name="Landed Costs Attachments"/>
</odoo>
