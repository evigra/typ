<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="homepage" inherit_id="website.homepage" name="Welcome to TYP">
    <xpath expr="//t[@t-call='website.layout']" position="replace">
      <t t-call="website.layout">
      <!-- Banner homepage -->
        <div class="oe_structure home-page-cover">
            <section class="s_text_block_image_fw oe_img_bg oe_custom_bg text-center background-header" style="background-image: url(/web/image/theme_typ.home-hero);">
                <div class="container">
                    <div class="row">
                        <h1 class="header-titles hidden-xs">WE SUPPORT THE SUCCESS OF YOUR<br/>BUSINESS</h1>
                        <h1 class="header-titles mr16 ml16 hidden-lg hidden-sm hidden-md">WE SUPPORT THE SUCCESS OF YOUR BUSINESS</h1>
                    </div>
                    <div class="row">
                        <h5 class="header-subtitles">Know our double stage system</h5>
                    </div>
                </div>
            </section>
        </div>
        <div class="oe_structure">
            <data data-transparent="transparent" id="transparency"/>
            <!-- highlights products -->
            <t t-call="typ.featured-products"/>

            <!-- first banner -->
            <section class="s_body_content text-center background-banner-quote">
                <div class="container oswald-text">
                    <div class="row hidden-xs">
                        <div class="col-md-4 col-md-offset-1 col-sm-7 col-sm-offset-0 mt32 ">
                            <img class="center-block" src="/web/image/theme_typ.typ-logo" alt=""/>
                            <h4 class="banner mt16 mb16">WE WANT TO BE YOUR PARTNERS</h4>
                            <a class="btn btn-primary btn-lg mb32" href="/contactus">QUOTE YOUR PROJECT</a>
                        </div>
                    </div>

                    <div class="hidden-md hidden-sm hidden-lg">
                        <div class="row">
                            <div class="col-xs-7 col-xs-offset-1 mt32 ">
                                <img class="pull-left" src="/web/image/theme_typ.typ-logo" alt=""/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 col-xs-offset-0">
                                <h4 class="banner mt16 mb16 hidden-xs">WE WANT TO BE YOUR PARTNERS</h4>
                                <h4 class="banner pull-left mt16 mb16 hidden-md hidden-sm hidden-lg">WE WANT TO BE YOUR PARTNERS</h4>
                            </div>
                        </div>
                        <div class="row hidden-md hidden-sm hidden-lg">
                            <div class="col-xs-10 col-xs-offset-1">
                                <a class="btn btn-primary btn-block mb8" href="/contactus">QUOTE YOUR PROJECT</a>
                            </div>
                        </div>
                    </div>

                </div>
            </section>


            <!-- categories -->
            <section class="dark-white text-center">
                <div class="container categories-section">
                    <div class="mt48 mb64">
                        <t t-call="typ.general_categories_images"/>
                    </div>
                </div>
            </section>

            <!-- second banner -->
            <section class="s_body_content text-center background-body text-center lennox-back">
                <div class="container lennox">
                    <div class="col-md-3 col-md-offset-1 col-sm-3 col-sm-offset-1 lennox-multiply mt32 hidden-xs" id="lennox-first-img"/>
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="row mb0">
                            <img class="mt32 mb24 hidden-xs" src="/web/image/theme_typ.lennox-logo" alt=""/>
                            <img class="mt16 mb8 hidden-sm hidden-md hidden-lg" src="/web/image/theme_typ.lennox-logo" alt=""/>
                        </div>
                        <div class="">
                            <p class="lennox-exclusive mt0 mb0">EXCLUSIVE DISTRIBUTOR</p>
                            <p class="lennox-products mt0 hidden-xs mb32">LENNOX PRODUCTS</p>
                            <p class="lennox-products mt0 hidden-md hidden-sm hidden-lg mb8">LENNOX PRODUCTS</p>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 hidden-xs lennox-multiply mt24" id="lennox-second-img"/>
                    <div class="col-xs-12 hidden-md hidden-sm hidden-lg lennox-multiply mt0" id="lennox-second-img"/>
                </div>
            </section>

            <!-- contact us -->
            <section>                
                <t t-call="typ.contactus"/>                
            </section>

            <!-- shop method -->
            <section class="s_body_content text-center background-body" style="background-image: url(/web/image/theme_typ.img-back-ice);">
                <div class="container oswald-text">
                    <!-- title -->
                    <div class="row mt24 mb32">
                        <h5 class="banner">HOW TO BUY IN T&amp;P</h5>
                    </div>
                    <!-- steps to buy -->
                    <div class="row">
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="row img-height">
                                <img class="mt16" src="/web/image/theme_typ.icon-info" alt="Solicita Acceso"/>
                            </div>
                            <div class="row mt16">
                                <p>REQUEST ACCESS TO<br/>SIGN IN</p>
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="row img-height">
                                <img class="mt16" src="/web/image/theme_typ.icon-cart" alt="Agrega Productos al Carrito"/>
                            </div>
                            <div class="row mt16">
                                <p>ADD PRODUCTS TO<br/>CART</p>
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3 hidden-xs">
                            <div class="row img-height">
                                <img class="mt16" src="/web/image/theme_typ.icon-payment" alt="Elige Metodo de Pago"/>
                            </div>
                            <div class="row mt16">
                                <p>CHOOSE YOUR PAYMENT<br/>METHOD</p>
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3 hidden-xs">
                            <div class="row img-height">
                                <img src="/web/image/theme_typ.icon-enjoy" alt="Recibe o Recoge tu Pedido"/>
                            </div>
                            <div class="row mt16">
                                <p>RECEIVE OR COLLECT<br/>YOUR EQUIPMENT</p>
                            </div>
                        </div> 
                    </div>
                    <!-- mobile second row -->
                    <div class="row hidden-md hidden-sm hidden-lg mt16">
                            <div class="col-xs-6">
                                <div class="row img-height">
                                    <img class="mt16" src="/web/image/theme_typ.icon-payment" alt="Elige Metodo de Pago"/>
                                </div>
                                <div class="row mt16">
                                    <p>CHOOSE YOUR PAYMENT<br/>METHOD</p>
                                </div>
                            </div> 
                            <div class="col-xs-6">
                                <div class="row img-height">
                                    <img src="/web/image/theme_typ.icon-enjoy" alt="Recibe o Recoge tu Pedido"/>
                                </div>
                                <div class="row mt16">
                                    <p>RECEIVE OR COLLECT<br/>YOUR EQUIPMENT</p>
                                </div>
                            </div> 
                    </div>
                </div>
                <!--  Request Access  -->
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 col-xs-12 col-xs-offset-0 col-sm-8 col-sm-offset-2 text-center mt32 mb32">
                      <a href="/contactus" class="btn btn-lg btn-primary">REQUEST ACCESS</a>
                    </div>
                </div>
            </section>

            <!-- testimonials -->
            <section class="dark-white text-center">
                <div class="container">
                    <!-- title -->
                    <div class="row mt32">
                        <h5 class="sections">OUR CLIENTS OPINION</h5>
                    </div>
                    <!-- opinions -->
                    <div class="row hidden-xs mt32 mb96">
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="row img-height">
                                <img class="testimonial" src="/web/image/theme_typ.t1" alt="Testimonial 1"/>
                            </div>
                            <div class="row mt16">
                                <p class="opinion-clients fade-effect">
                                    “Tengo 10 años siendo cliente de T&amp;P, la confianza que tengo de encontrar lo que necesito, y sus políticas de sistema doble etapa hacen de ésta empresa la mejor opción”
                                </p>                            
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="row img-height">
                                <img class="testimonial" src="/web/image/theme_typ.t4" alt="Testomonial 2"/>
                            </div>
                            <div class="row mt16">
                                <p class="opinion-clients fade-effect">
                                    “Nuestros amigos de T&amp;P, han sido parte de nuestro recorrido desde el inicio de nuestra empresa, así como el crecimiento que hemos tenido, es siempre un placer trabajar con T&amp;P como nuestro proveedor”
                                </p>    
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3">
                            <div class="row img-height">
                                <img class="testimonial" src="/web/image/theme_typ.t2" alt="Testimonial 3"/>
                            </div>
                            <div class="row mt16">
                                <p class="opinion-clients fade-effect">
                                    “Simplemente mantenemos nuestra fidelidad con T&amp;P, porque representan un gran profesionalismo, su equipo siempre está implicado y atento de nosotros, los productos son de la mejor calidad"
                                </p>
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3">
                            <div class="row img-height">
                                <img class="testimonial" src="/web/image/theme_typ.t3" alt="Testimonial 4"/>
                            </div>
                            <div class="row mt16">
                                <p class="opinion-clients fade-effect">
                                    “El equipo de T&amp;P siempre está atento de nuestras necesidades, y de cumplir con el proceso completo con un estándar de calidad muy alto, nos gusta ser sus clientes”
                                </p>
                            </div>
                        </div> 
                    </div>
                    <!-- mobile second row -->
                    <div class="container hidden-md hidden-sm hidden-lg mt24 mb48">
                            <div class="col-xs-6 mt24">
                                <div class="row img-height">
                                    <img class="testimonial" src="/web/image/theme_typ.t1" alt="Testomonial 1"/>
                                </div>
                                <div class="row mt16">
                                    <p>“Tengo 10 años siendo cliente de T&amp;P, la confianza que tengo de encontrar lo que necesito, y sus políticas de sistema doble etapa hacen de ésta empresa la mejor opción”</p>
                                </div>
                            </div> 
                            <div class="col-xs-6 mt24">
                                <div class="row img-height">
                                    <img class="testimonial" src="/web/image/theme_typ.t4" alt="Testimonial 2"/>
                                </div>
                                <div class="row mt16">
                                    <p>“Nuestros amigos de T&amp;P, han sido parte de nuestro recorrido desde el inicio de nuestra empresa, así como el crecimiento que hemos tenido, es siempre un placer trabajar con T&amp;P como nuestro proveedor”</p>
                                </div>
                            </div> 
                            <div class="col-xs-6 mt24">
                                <div class="row img-height">
                                    <img class="testimonial" src="/web/image/theme_typ.t2" alt="Testimonial 3"/>
                                </div>
                                <div class="row mt16">
                                    <p>“Simplemente mantenemos nuestra fidelidad con T&amp;P, porque representan un gran profesionalismo, su equipo siempre está implicado y atento de nosotros, los productos son de la mejor calidad"</p>
                                </div>
                            </div> 
                            <div class="col-xs-6 mt24">
                                <div class="row img-height">
                                    <img class="testimonial" src="/web/image/theme_typ.t3" alt="Testimonial 4"/>
                                </div>
                                <div class="row mt16">
                                    <p>“El equipo de T&amp;P siempre está atento de nuestras necesidades, y de cumplir con el proceso completo con un estándar de calidad muy alto, nos gusta ser sus clientes”</p>
                                </div>
                            </div> 
                    </div>
                </div>
               
            </section>
      
        </div>
        <div class="oe_structure"/>
      </t>
    </xpath>
  </template>

 <!-- general categories template -->
    <template id="general_categories_images" name="General Categories">
        <t t-set="root_categories_list" t-value="env['product.public.category'].search([('parent_id', '=', None),('landing_category','=', True)])"/>
        <t t-foreach="root_categories_list" t-as="c">
            <div class="col-xs-6" t-if="request.httprequest.path == '/'">
                <a class="category-card" t-att-name="'id_category%d' % c_index" t-att-href="'/shop/category/' + slug(c)">
                    <div class="img-category"> 
                        <img class="mt16 mb16" t-att-src="'/website/image/product.public.category/%s/image' % (c.id)" t-att-alt="c.name" />
                    </div>
                    <div class="hidden-xs button-category mb32">
                        <button class="btn btn-lg btn-primary" t-field='c.name' />
                    </div>
                    <div class="hidden-sm hidden-md hidden-lg button-category mb16">
                        <button class="btn btn-sm" t-field='c.name' />
                    </div>
                </a>
            </div>
        </t>
    </template>
</odoo> 

