<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="view_hr_employee_beneficiary_form" model="ir.ui.view">
        <field name="name">hr.employee.beneficiary.form</field>
        <field name="model">hr.employee.beneficiary</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="rfc"/>
                    <field name="percentage"/>
                </group>
            </form>
        </field>
    </record>
    <record id="view_hr_employee_beneficiary_tree" model="ir.ui.view">
        <field name="name">hr.employee.beneficiary.tree</field>
        <field name="model">hr.employee.beneficiary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="rfc"/>
                <field name="percentage"/>
            </tree>
        </field>
    </record>
</odoo>
