<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s-product-description" name="Product Specifications">
        <section class="product-specifications">
            <div class="container">
                <div class="col-md-12 col-xs-12 mb48">
                    <div class="col-md-5 col-xs-12">
                        <div class="row s-content">
                            <p class="s-title mt32">Title</p>
                            <p class="mt16 mb24">
                                Insert text here
                            </p>
                        </div>
                        <div class="row s-content">
                            <p class="s-subtitle mb0">Second title</p>
                            <p class="mb24">
                                Insert text here
                            </p>
                        </div>
                    </div>                                     
                </div>
            </div>    
        </section>
    </template>

    <template id="s-product-description-title" name="TYP Title">
        <div class="row s-content">
            <p class="s-title mt16">Title</p>
            <p class="mt16 mb24">
               Insert text here
            </p>
        </div>
    </template>

    <template id="s-product-description-subtitle" name="TYP Subtitle">
        <div class="row s-content">
            <p class="s-subtitle mb0">Subtitle</p>
            <p class="mb24">
                Insert text here
            </p>
        </div>
    </template>

    <template id="s_image_banner" name="Product Banner">
        <section class="s_image_banner">                
            <img class="img img-responsive" src="/web/image/theme_typ.s-banner" alt="Sample"/>
        </section>
    </template>

     <template id="s_image_banner_contact_us" name="Banner Contact Us">
        <section class="s_text_block_image_fw oe_img_bg oe_custom_bg text-center">
                <div class="container oswald-text">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-1 col-sm-7 col-sm-offset-0 mt32 ">
                            <span class="typ-img-logo-banner" t-field="res_company.logo" t-options="{'widget': 'image'}" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                            <h4 class="banner mt16 mb16">WE WANT TO BE YOUR PARTNERS</h4>
                            <a class="btn btn-primary btn-lg mb32" href="/contactus">QUOTE YOUR PROJECT</a>
                        </div>
                    </div>
                </div>
        </section>
    </template>

    <template id="s_banner_homepage" name="Banner Homepage">
        <section class="s_text_block_image_fw oe_img_bg oe_custom_bg text-center background-header" style="background-image: url(/web/image/theme_typ.home-hero);">
            <div class="container">
                <div class="row">
                    <h1 class="header-titles">WE SUPPORT THE SUCCESS OF YOUR<br/>BUSINESS</h1>
                </div>
                <div class="row">
                    <h5 class="header-subtitles">Know our double stage system</h5>
                </div>
            </div>
        </section>
    </template>

    <template id="s_banner_sales" name="Banner How to">
        <section class="s_text_block_image_fw oe_img_bg oe_custom_bg text-center background-body" style="background-image: url(/web/image/theme_typ.img-back-ice);">
            <div class="container oswald-text">
                <!-- title -->
                <div class="row mt24 mb32">
                    <h5 class="banner">HOW TO BUY IN T&amp;P</h5>
                </div>
                <!-- steps to buy -->
                <div class="row">
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <div class="row img-height">
                            <img class="mt16" src="/web/image/theme_typ.icon-info" alt="Solicita Acceso"/>
                        </div>
                        <div class="row mt16">
                            <p>REQUEST ACCESS TO<br/>SIGN IN</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <div class="row img-height">
                            <img class="mt16" src="/web/image/theme_typ.icon-cart" alt="Agrega Productos al Carrito"/>
                        </div>
                        <div class="row mt16">
                            <p>ADD PRODUCTS TO<br/>CART</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 hidden-xs">
                        <div class="row img-height">
                            <img class="mt16" src="/web/image/theme_typ.icon-payment" alt="Elige Metodo de Pago"/>
                        </div>
                        <div class="row mt16">
                            <p>CHOOSE YOUR PAYMENT<br/>METHOD</p>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3 hidden-xs">
                        <div class="row img-height">
                            <img src="/web/image/theme_typ.icon-enjoy" alt="Recibe o Recoge tu Pedido"/>
                        </div>
                        <div class="row mt16">
                            <p>RECEIVE OR COLLECT<br/>YOUR EQUIPMENT</p>
                        </div>
                    </div>
                </div>
                <!-- mobile second row -->
                <div class="row hidden-md hidden-sm hidden-lg mt16">
                        <div class="col-xs-6">
                            <div class="row img-height">
                                <img class="mt16" src="/web/image/theme_typ.icon-payment" alt="Elige Metodo de Pago"/>
                            </div>
                            <div class="row mt16">
                                <p>CHOOSE YOUR PAYMENT<br/>METHOD</p>
                            </div>
                        </div> 
                        <div class="col-xs-6">
                            <div class="row img-height">
                                <img src="/web/image/theme_typ.icon-enjoy" alt="Recibe o Recoge tu Pedido"/>
                            </div>
                            <div class="row mt16">
                                <p>RECEIVE OR COLLECT<br/>YOUR EQUIPMENT</p>
                            </div>
                        </div> 
                </div>
            </div>
            <!--  Request Access  -->
            <div class="row">
                <div class="col-md-8 col-md-offset-2 col-xs-12 col-xs-offset-0 col-sm-8 col-sm-offset-2 text-center mt32 mb32">
                <a href="/contactus" class="btn btn-lg btn-primary">REQUEST ACCESS</a>
                </div>
            </div>
        </section>
    </template>

     <template id="s_typ_testimonials" name="Clients Opinions">
        <section class="s_text_block_image_fw oe_img_bg oe_custom_bg dark-white text-center">
                <div class="container">
                    <!-- title -->
                    <div class="row mt32">
                        <h5 class="sections">OUR CLIENTS OPINION</h5>
                    </div>
                    <!-- opinions -->
                    <div class="row mt32 mb96">
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="row img-height">
                                <img class="testimonial" src="/web/image/theme_typ.t1" alt="Testimonial 1"/>
                            </div>
                            <div class="row mt16">
                                <p class="opinion-clients fade-effect">
                                    “Tengo 10 años siendo cliente de T&amp;P, la confianza que tengo de encontrar lo que necesito, y sus políticas de sistema doble etapa hacen de ésta empresa la mejor opción”
                                </p>                            
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="row img-height">
                                <img class="testimonial" src="/web/image/theme_typ.t4" alt="Testomonial 2"/>
                            </div>
                            <div class="row mt16">
                                <p class="opinion-clients fade-effect">
                                    “Nuestros amigos de T&amp;P, han sido parte de nuestro recorrido desde el inicio de nuestra empresa, así como el crecimiento que hemos tenido, es siempre un placer trabajar con T&amp;P como nuestro proveedor”
                                </p>    
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="row img-height">
                                <img class="testimonial" src="/web/image/theme_typ.t2" alt="Testimonial 3"/>
                            </div>
                            <div class="row mt16">
                                <p class="opinion-clients fade-effect">
                                    “Simplemente mantenemos nuestra fidelidad con T&amp;P, porque representan un gran profesionalismo, su equipo siempre está implicado y atento de nosotros, los productos son de la mejor calidad"
                                </p>
                            </div>
                        </div> 
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <div class="row img-height">
                                <img class="testimonial" src="/web/image/theme_typ.t3" alt="Testimonial 4"/>
                            </div>
                            <div class="row mt16">
                                <p class="opinion-clients fade-effect">
                                    “El equipo de T&amp;P siempre está atento de nuestras necesidades, y de cumplir con el proceso completo con un estándar de calidad muy alto, nos gusta ser sus clientes”
                                </p>
                            </div>
                        </div> 
                    </div>
                </div>
            </section>
    </template>


    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='o_scroll']" position="inside">
            <div id="snippet_typ" class="o_panel">
                <div class="o_panel_header">
                    <i class="fa fa-th-large"/> TYP
                </div>
                <div class="o_panel_body">
                    <t t-snippet="typ.s_image_banner" />
                    <t t-snippet="typ.s_image_banner_contact_us" />
                    <t t-snippet="typ.s_banner_homepage" />
                    <t t-snippet="typ.s_banner_sales" />
                    <t t-snippet="typ.s_typ_testimonials" />
                </div>
            </div>
        </xpath>
    </template>

    <template id="snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='content']" position="attributes">
            <attribute name="data-selector" add=".s-content" separator=", "></attribute>
            <attribute name="data-drop-near" add=".s-content" separator=", "></attribute>
        </xpath>
    </template>


</odoo>
