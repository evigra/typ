        <field name="name">sale.order.product.customer.code.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="product_supplierinfo_for_customer_sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//tree//field[@name='product_customer_code']" position="attributes">
                <attribute name="groups" translation="off">typ.res_group_product_customer_code</attribute>
            </xpath>
            <xpath expr="//form//form//field[@name='product_customer_code']" position="attributes">
                <attribute name="groups" translation="off">typ.res_group_product_customer_code</attribute>
            </xpath>
        </field>
    </record> -->
    <record id="sale_margin_sale_order_line" model="ir.ui.view">
        <field name="name">sale.order.line</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order_line"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//field[@name='order_line']/form//field[@name='purchase_price']" position="attributes"> TODO: when migrated module
                <attribute name="groups" translation="off">typ_stock.res_group_standard_price</attribute>
            </xpath> -->
           <field name="margin" position="attributes">
                <attribute name="groups" translation="off">typ.res_group_margin_sale_order</attribute>
           </field>
        </field>
    </record>
    
    <menuitem id="sale_order_traffic_menu" parent="sale.sale_menu_root" name="Traffic"/>
    <menuitem id="sale_order_traffic" parent="typ.sale_order_traffic_menu" name="Traffic" action="stock.stock_picking_type_action" sequence="10"/>
