<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_hr_employee_reference_form" model="ir.ui.view">
        <field name="name">hr.employee.reference.form</field>
        <field name="model">hr.employee.reference</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="friendly" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_hr_employee_reference_tree" model="ir.ui.view">
        <field name="name">hr.employee.reference.tree</field>
        <field name="model">hr.employee.reference</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="friendly" />
            </tree>
        </field>
    </record>

</odoo>
