<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.product.website.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='website']" position="inside">
                <field name="is_highlight" string="Highlight Product"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_form_cover_img">
        <field name="name">product.public.category.form</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <field name="cover_img" widget="image"/>
            </xpath>
        </field>
    </record>
    <record id="view_product_supplier_inherit" model="ir.ui.view">
        <field name="name">product.template.supplier.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_supplierinfo_for_customer.view_product_supplier_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='supplier_ids']/.." position="attributes">
                <attribute name="attrs"></attribute>
            </xpath>
            <xpath expr="//field[@name='variant_seller_ids']/.." position="attributes">
                <attribute name="attrs"></attribute>
            </xpath>
        </field>
    </record>
    <record id="view_product_normal_inherit_typ" model="ir.ui.view">
        <field name="name">product.normal.form.inherit.typ</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <group name="packaging" position="after">
                <separator string="Storage location"/>
                <field name="product_warehouse_ids">
                    <tree editable="bottom">
                        <field name="warehouse_id" required="True"/>
                        <field name="posx"/>
                        <field name="posy"/>
                        <field name="posz"/>
                    </tree>
                </field>
            </group>
        </field>
    </record>
    <record id="product.product_search_form_inherit_typ" model="ir.ui.view">
        <field name="name">product.template.search.inherit.typ</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                <field name="product_warehouse_ids" string="Storage Location"/>
            </field>
        </field>
    </record>
</odoo>
