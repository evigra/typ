<?xml version="1.0"?>
<odoo>
    <record id="view_partner_form_inherit_helpdesk" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="helpdesk.view_partner_form_inherit_helpdesk"/>
        <field name="arch" type="xml">
            <button name="action_open_helpdesk_ticket" position="attributes">
                <attribute name="attrs"></attribute>
            </button>
            <xpath expr="//form" position="attributes">
                <attribute name="create" translation="off">false</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']" position="inside">
                <field name="importance" />
                <field name="potential_importance" />
                <field name="partner_type" required="1"/>
                <field name="business_activity" required="1"/>
                <field name="dealer" />
                <field name="region" />
                <field name="res_warehouse_ids" string="Warehouse configurations">
                    <tree editable="bottom">
                        <field name="warehouse_id" required="True"/>
                        <field name="user_id"/>
                        <field name="credit_limit"/>
                        <field name="allow_overdue_invoice"/>
                    </tree>
                </field>
            </xpath>
            <xpath expr="//group[@name='sale']" position="after">
                <group string="Social Media" name="social_media">
                    <field name="facebook_profile" widget="url"/>
                    <field name="linkedin_profile" widget="url"/>
                    <field name="upgradable"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_partner_tree" model="ir.ui.view">
        <field name='name'>res.partner.tree.extra</field>
        <field name='model'>res.partner</field>
        <field name='inherit_id' ref='base.view_partner_tree'/>
        <field name='type'>tree</field>
        <field name='arch' type='xml'>
            <xpath expr="//tree" position="attributes">
                <attribute name="create" translation="off">false</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='email']" position="after">
                <field name="importance"/>
                <field name="total_invoiced"/>
                <field name="credit_limit"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="create_date"/>
                <field name="create_uid"/>
            </xpath>
        </field>
    </record>
    <record id="partner_hidden_button_kanban" model="ir.ui.view">
        <field name="name">partner.kanban.hide_button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('typ.partner_group_hidden_create_button')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="create" translation="off">false</attribute>
            </xpath>
        </field>
    </record>
</odoo>
