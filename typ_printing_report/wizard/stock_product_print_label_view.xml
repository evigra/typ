<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="print_label_form_view" model="ir.ui.view">
        <field name="name">Print Label Form View</field>
        <field name="model">stock.print_label</field>
        <field name="arch" type="xml">
            <form string="Print Label">
                <group>
                    <field name="product_id" readonly="1"/>
                    <field name="qty"/>
                    <field name="report_id"/>
                </group>
                <footer>
                    <button name="print_label" string="Print label(s)" type="object"  class="oe_highlight"  />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="print_label_action" model="ir.actions.act_window">
        <field name="name">Print Label</field>
        <field name="res_model">stock.print_label</field>
        <field name="src_model">product.product</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="product_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">product product form inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="before">
                <field name="normalized_barcode"/>
                <field name="report_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_product_product_form_inherit" model="ir.ui.view">
        <field name="name">product product form inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="barcodes_generator_product.view_product_product_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode_base']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('barcode_rule_id', '=', False), ('normalized_barcode', '!=', False)], 'readonly': [('generate_type', '!=', 'manual')]}</attribute>
            </xpath>
            <xpath expr="//button[@name='generate_base']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('generate_type', '!=', 'sequence'), '|', ('barcode_base', '!=', 0), ('normalized_barcode', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="attrs">{'readonly': ['|', ('generate_type', '=', 'sequence')], 'invisible': [('normalized_barcode', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='generate_barcode']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('barcode_rule_id', '=', False), '|', ('normalized_barcode', '!=', False), ('barcode_base', '=', 0)]}</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_category_form_view_inherit" model="ir.ui.view">
        <field name="name">product category form inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="report_id"/>
            </xpath>
        </field>
    </record>
    <record id="label_report_company_form_view_inherit" model="ir.ui.view">
        <field name="name">company form inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[last()]" position="inside">
                <group>
                    <separator string="Label Report" colspan="4"/>
                    <field name="report_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
