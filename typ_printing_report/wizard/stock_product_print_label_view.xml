<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="print_label_form_view" model="ir.ui.view">
            <field name="name">Print Label Form View</field>
            <field name="model">stock.print_label</field>
            <field name="arch" type="xml">
                <form string="Print Label">
                    <group>
                        <field name="product_id" readonly="1"/>
                        <field name="qty"/>
                        <field name="report_id"/>
                    </group>
                    <footer>
                        <button name="print_label" string="Print label(s)" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="print_label_action" model="ir.actions.act_window">
            <field name="name">Print Label</field>
            <field name="res_model">stock.print_label</field>
            <field name="src_model">product.product</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product product form inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ean13']" position="after">
                    <field name="report_id"/>
                </xpath>
            </field>
        </record>
        <record id="product_category_form_view_inherit" model="ir.ui.view">
            <field name="name">product category form inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="report_id"/>
                </xpath>
            </field>
        </record>
        <record id="label_report_company_form_view_inherit" model="ir.ui.view">
            <field name="name">company form inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Product Label Report" position="inside">
                        <group>
                            <separator string="Label Report" colspan="4"/>
                            <field name="report_id"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>
