<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="typ_sale.layout_pdf" inherit_id="report.layout">
    <xpath expr="//style" position="after">
        <link href="/typ_sale/static/src/css/layout.css" rel="stylesheet"/>
    </xpath>
</template>

<template id="typ_sale.minimal_layout" inherit_id="report.minimal_layout">
    <xpath expr="//style" position="after">
        <link href="/typ_sale/static/src/css/layout.css" rel="stylesheet"/>
    </xpath>
</template>

<template id="report.style">
    body {
        color: #000;
        word-wrap: break-word;
    }
</template>

<template id="typ_sale.external_layout">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>
    <t t-call="typ_sale.external_layout_header"/>
    <t t-raw="0" />
    <t t-call="typ_sale.external_layout_footer"/>
</template>

<template id="report.html_container">
    <t t-set="body_classname" t-value="'vauxoo'"/>
    <t t-call="report.layout">
        <t t-raw="0"/>
    </t>
</template>
<!-- End of what needs to be in a separate module -->

<template id="typ_sale.external_layout_header">
    <div class="header vauxoo">
        <div class="row">
            <div class="col-xs-6">
                <img class="img img-responsive" t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-width: 100px;"/>
                <t t-set="address" t-value="o.company_id"/>
                <address t-if="address" style="font-size: 12px; line-height: 13px;">
                    <i class="fa fa-map-marker"/>
                    <strong><t t-esc="address.name or ''"/></strong><br/>
                    <t t-if="address.vat">
                        <span>RFC</span>: <span t-raw="address.partner_id.vat_split"/>
                        <br/>
                    </t>
                    <t t-if="address.street">
                        <span t-raw="address.street"/>
                    </t>
                    <t t-if="address.l10n_mx_street3">
                        <span t-raw="address.l10n_mx_street3"/>
                    </t><br/>
                    <t t-if="address.street2">
                        <span t-raw="address.street2"/>
                    </t>
                    <t t-if="address.city">
                        <span t-raw="address.city"/>
                    </t>
                    <t t-if="address.l10n_mx_city2">
                        <span t-raw="address.l10n_mx_city2"/>
                    </t><br/>
                    <t t-if="address.state_id">
                        <span t-raw="address.state_id.name"/>
                    </t>
                    <t t-if="address.country_id">
                        <span t-raw="address.country_id.name"/>
                    </t>
                    <t t-if="address.zip">
                        <span t-raw="address.zip"/>
                    </t>
                    <br/>
                    <t t-if="address.phone">
                        <i class="fa fa-phone"/>
                        <span class="text-muted" style="font-size: 12px; line-height: 13px;" t-raw="address.phone"/>
                    </t>
                    <t t-if="address.fax">
                        <i class="fa fa-fax"/>
                        <span class="text-muted" style="font-size: 12px; line-height: 13px;" t-raw="address.fax"/>
                    </t>
                </address>
            </div>
            <div class="col-xs-6">
                <h3 class="text-right" style="padding-top: 45px;">
                    <span t-if="o.state not in ['draft','sent']">Order N°</span>
                    <span t-if="o.state in ['draft','sent']">Quotation N°</span>
                    <span t-field="o.name"/>
                </h3>
            </div>
        </div>
    </div>
</template>

<template id="typ_sale.external_layout_footer">
    <div class="footer" style="border-top: 1px solid #ccc; padding-top: 10px;">
        <div class="text-center">
            <span>Phone</span>: <span t-field="company.phone"/>
            | <span>Email</span>: <span t-field="company.email"/>
            | <span>Website</span>: <span t-field="company.website"/>
            <br/>
            <span>Contact</span>: <span t-field="user.name"/>
            | <span>Email</span>: <span t-field="user.email"/>
        </div>
        <ul class="list-inline hidden-md hidden-lg hidden-sm text-right">
            <li>Page:</li>
            <li><span class="page"/></li>
            <li>/</li>
            <li><span class="topage"/></li>
        </ul>
   </div>
</template>

</data>
</openerp>
