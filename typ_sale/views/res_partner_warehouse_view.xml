<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="view_res_partner_warehouse_form" model="ir.ui.view">
        <field name="name">res.partner.warehouse.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <separator string="Warehouse configurations"/>
                <field name="res_warehouse_ids">
                    <tree editable="bottom">
                        <field name="warehouse_id" required="True"/>
                        <field name="user_id"/>
                        <field name="credit_limit"/>
                        <field name="allow_overdue_invoice"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
