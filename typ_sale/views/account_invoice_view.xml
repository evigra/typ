<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>

        <record id="view_account_invoice_form_type_payment_term" model="ir.ui.view">
            <field name="name">account.invoice.form.type.payment.term</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='currency_id']" position="before">
                    <field name="type_payment_term" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')],}"/>
                </xpath>
                <xpath expr="//field[@name='payment_term']" position="attributes">
                    <attribute name="groups">typ_sale.group_sale_order_invoice_payment_term_manager</attribute>
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
