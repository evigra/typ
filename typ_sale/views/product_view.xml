<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="product_template_tree_extra_view" model="ir.ui.view">
        <field name="name">product.template.product.tree.extra</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='qty_available']" position="after">
                    <field name="incoming_qty"/>
                </xpath>
                <xpath expr="//field[@name='virtual_available']" position="after">
                    <field name="reordering_max_qty"/>
                    <field name="reordering_min_qty"/>
                </xpath>
                <xpath expr="//field[@name='uom_id']" position="after">
                    <field name="create_date"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="product_variant_tree_view" model="ir.ui.view">
        <field name="name">product.product.variant.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_available']" position="after">
                <field name="incoming_qty"/>
            </xpath>
            <xpath expr="//field[@name='virtual_available']" position="after">
                <field name="reordering_max_qty"/>
                <field name="reordering_min_qty"/>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="create_date"/>
            </xpath>
        </field>
    </record>
</odoo>
