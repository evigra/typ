<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="product_template_tree_extra_view" model="ir.ui.view">
        <field name="name">product.template.product.tree.extra</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='qty_available']" position="after">
                    <field name="incoming_qty"/>
                </xpath>
                <xpath expr="//field[@name='virtual_available']" position="after">
                    <field name="reordering_max_qty"/>
                    <field name="reordering_min_qty"/>
                </xpath>
                <xpath expr="//field[@name='uom_id']" position="after">
                    <field name="create_date"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="product_variant_tree_view" model="ir.ui.view">
        <field name="name">product.product.variant.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='attribute_value_ids']" position="after">
                <field name="state"/>
            </xpath>
            <xpath expr="//field[@name='qty_available']" position="after">
                <field name="incoming_qty"/>
            </xpath>
            <xpath expr="//field[@name='virtual_available']" position="after">
                <field name="reordering_max_qty"/>
                <field name="reordering_min_qty"/>
            </xpath>
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="create_date"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_variant_form" model="ir.ui.view">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <field name="state"/>
            </xpath>
            <xpath expr="//page[@name='notes']" position='after'>
                <page string='Market' name='market'>
                    <group>
                        <group>
                            <field name='product_market_type'/>
                            <field name='project_or_replacement'/>
                            <field name='ref_ac'/>
                            <field name='final_market'/>
                            <field name='main_customer_activity'/>
                        </group>
                        <group>
                            <field name='wait_time'/>
                            <field name='type_of_client'/>
                            <field name='price_sensitivity'/>
                            <field name='product_nature'/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_category_form_view_inheriti_tanner" model="ir.ui.view">
        <field name="name">product.category.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="stock.product_category_form_view_inherit"/>
        <field name="arch" type="xml">
            <field name="removal_strategy_id" position="after">
                <field name="allow_change_price_sale"/>
            </field>
        </field>
    </record>

    <record id="product_custom_search_view" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <field name="pricelist_id" position="after">
            <field name="product_market_type" string="Product market type"
                filter_domain="[('product_market_type','ilike',self)]" />
            </field>
        </field>
    </record>

    <record id="market_type_product_view" model="ir.ui.view">
        <field name="name">product.market.type.form</field>
        <field name="model">product.market.type</field>
        <field name="arch" type="xml">
            <form string="Product market type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="market_type_product_list_action">
        <field name="name">Product market type</field>
        <field name="res_model">product.market.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="typ_sale.market_type_product_list_action"
        name="Product types market"
        id="menu_product_type_market_form_action"
        parent="sale.prod_config_main" sequence="9"/>

</odoo>
