<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
       <record id="product_price_history_form_view" model="ir.ui.view">
            <field name="name">product.price.history.form.view</field>
            <field name="model">product.price.history</field>
            <field name="arch" type="xml">
                <form string="Product Price History Form">
                    <group>
                        <sheet>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="product_template_id"/>
                                <field name="datetime"/>
                                <field name="cost"/>
                            </group>
                        </sheet>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="product_price_history_tree_view">
            <field name="name">product.price.history.tree.view</field>
            <field name="model">product.price.history</field>
            <field name="arch" type="xml">
                <tree string="Product Price History List">
                    <field name="product_template_id"/>
                    <field name="datetime"/>
                    <field name="cost"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="product_price_history_view_search">
            <field name="name">product.price.hyistory.search</field>
            <field name="model">product.price.history</field>
            <field name="arch" type="xml">
                <search string="Product Price History Search">
                    <field name="product_template_id" string="Product"/>
                </search>
            </field>
        </record>

        <act_window id="action_product_price_history"
            name = "Product Price History"
            res_model="product.price.history"
            view_mode="tree,form"
            limit="80"/>

        <menuitem id="product.product_price_history" parent="base.menu_product" action="action_product_price_history" sequence="25" groups="typ_sale.res_group_cost_audit"/>
    </data>
</openerp>
