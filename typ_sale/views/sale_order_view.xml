    <record id="view_origin_sale_order_filter_inherit" model="ir.ui.view">
        <field name="name">origin.sale.order.filter.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="origin"/>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_form_type_payment_term" model="ir.ui.view">
        <field name="name">sale.order.form.type.payment.term</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pricelist_id']" position="after">
                <field name="type_payment_term" attrs="{'readonly': [('state', '!=', 'draft')],'required': [('state', '=', 'draft')],}"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="groups" translation="off">typ_sale.group_sale_order_invoice_payment_term_manager</attribute>
            </xpath>
           <field name="client_order_ref" position="attributes">
                <attribute name="string" translation="off">Reference/Customer</attribute>
           </field>
           <button name="action_cancel" position="attributes">
                <attribute name="groups" translation="off">typ_sale.res_group_cancel_sale_order</attribute>
           </button>
           <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="readonly" translation="off">1</attribute>
            </xpath>
            <xpath expr="//group[2]" position="after">
                <group>
                    <field name="so"/>
                </group>
            </xpath>
            <xpath expr="//group[3]" position="after">
                <group>
                    <field name="stocksale" attrs="{'invisible': [('carrier_id', '!=', False)]}"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='carrier_id']" position="attributes">
                <attribute name="attrs" translation="off">{'required': [('stocksale', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//notebook/page[2]" position="after">
                <page string="Special Order" attrs="{'invisible': [('so', '=', False)]}">
                    <group>
                        <group>
                            <field name="delivery_promise" attrs="{'required': [('so', '=', True)]}"/>
                            <field name="shipping_to" attrs="{'required': [('so', '=', True)]}"/>
                            <field name="partial_supply" attrs="{'required': [('so', '=', True)]}"/>
                            <field name="type_of_import" attrs="{'required': [('so', '=', True)]}"/>
                            <field name="shipping_by" attrs="{'required': [('so', '=', True)]}"/>
                            <field name="purchase_currency" attrs="{'required': [('so', '=', True)]}"/>
                            <field name="special_discounts" attrs="{'required': [('so', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="notest" string="Notes (Shipping Address, if applicable)" attrs="{'required': [('so', '=', True)]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="sale_order_purchase_template" model="ir.ui.view">
        <field name="name">sale.order.purchase.template</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form string="Pedido especial" create="0" edit="0">
                <group>
                    <field name="create_uid" readonly="1"/>
                    <field name="partner_id" readonly="1" domain="[]"/>
                    <field name="delivery_promise" readonly="1"/>
                    <field name="shipping_to" readonly="1"/>
                    <field name="partial_supply" readonly="1"/>
                    <field name="type_of_import" readonly="1"/>
                    <field name="shipping_by" readonly="1"/>
                    <field name="purchase_currency" readonly="1"/>
                    <field name="special_discounts" readonly="1"/>
                </group>
                <group>
                    <field name="notest"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_purchase_order_inherit" model="ir.ui.view">
        <field name="name">purchase.order.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="attrs" translation="off">
                    {'readonly':[('state', 'not in', ['sent', 'bid', 'draft'])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="sale_order_id"
                    domain="[('so', '=', True)]"
                    context="{
                    'form_view_ref':'typ_sale.sale_order_purchase_template',
                    }"/>
                <field name="supply_commitment_date" attrs="{'required': [('sale_order_id', '!=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_sale_order_form_margin" model="ir.ui.view">
        <field name="name">sale.order.form.margin</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order"/>
        <field name="arch" type="xml">
           <field name="margin" position="attributes">
                <attribute name="groups" translation="off">typ_sale.res_group_margin_sale_order</attribute>
           </field>
        </field>
    </record>

    <record id="view_state_sale_order_filter_inherit" model="ir.ui.view">
        <field name="name">state.sale.order.filter.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="State" domain="[]" context="{'group_by':'state'}"/>
            </xpath>
        </field>
    </record>

    <menuitem id="sale_order_traffic_menu" parent="sale.sale_menu_root" name="Traffic"/>
    <menuitem id="sale_order_traffic" parent="typ_sale.sale_order_traffic_menu" name="Traffic" action="stock.stock_picking_type_action" sequence="10"/>
</odoo>
