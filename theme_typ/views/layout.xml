<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Menu elements to show as blog,shop,contact us -->
    <template id="menu_elements" name="Menu Elements">
    <div class="no-padding-right hidden-xs" id="menu-options">
                <div class="container">
                    <!-- Products menu -->
                    <ul class="nav navbar-nav navbar-center no-padding-left ml16 products-navbar" id="top_menu">
                        <li id="categories-products">
                            <a id="products-menu">Products<span class="fa fa-chevron-down ml8"></span></a>
                            <t t-call="theme_typ.all_categories"/>
                        </li>
                    </ul>
                    <!-- Menu elements -->
                    <ul class="nav navbar-nav navbar-center pull-right">
                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu"/>
                        </t>
                    </ul>
                </div> 
            </div>
    </template>


    <!-- All products categories -->
     <template id="all_categories" name="All TyP Categories">
        <t t-if="root_categories">
            <ul class="dropdown-menu menu-products list-unstyled categories-menu dark-white no-padding-top no-padding-bottom">
                <div class="col-md-12 col-sm-12 no-padding">
                    <ul class="nav nav-tabs col-md-3 col-sm-4 categories-list white-color no-padding-right">
                         <t t-foreach="root_categories" t-as="c">
                            <t t-call="theme_typ.parent-categories"/>
                         </t> 
                     </ul> 
                     <div class="tab-content mt24 col-md-6 col-sm-5">
                        <t t-foreach="root_categories" t-as="c">
                            <t t-call="theme_typ.subcategories"/>
                         </t> 
                    </div>
                    <div class="col-md-3 col-sm-3 no-padding menu-category">
                        <t t-foreach="root_categories" t-as="c">
                            <t t-call="theme_typ.categories-menu-images"/>
                        </t>
                    </div>
                </div>
               
            </ul>
        </t>
    </template>


    <template id="categories-menu-images" name="Categories Menu Image">
            <img t-if="c.cover_img" class="menu-img hidden" t-att-src="'/website/image/product.public.category/%s/cover_img' % (c.id)"  t-att-id="'img-category%d' % c_index" t-att-alt="c.name"  />
            <img t-else="" class="menu-img hidden" src="/web/image/theme_typ.default-cover" t-att-id="'img-category%d' % c_index" t-att-alt="c.name" />
    </template>

    <template id="subcategories" name="Recursive template for categories tree">
        <t t-set="categ_url" t-value="'/shop/category/' + slug(c)"/>
        <li t-if="c.parent_id in root_categories" t-att-class="'col-md-6 col-sm-6 mb16' if c.parent_id else None">
            <a t-att-href="categ_url">
                <span t-field='c.name'/>
            </a>
        </li>

        <t t-if="c.child_id and c in root_categories"> 
            <div class="categories-content tab-pane fade" t-att-id="'category%d' % c_index">
                <ul class="list-unstyled">
                    <t t-foreach="c.child_id" t-as="c">
                        <t t-call="theme_typ.subcategories"/>
                    </t>
                </ul>
            </div>
        </t>
    </template>

    <template id="parent-categories" name="Recursive template for categories tree">
        <t t-set="categ_url" t-value="'/shop/category/' + slug(c)"/>
                    <t t-if="c.child_id and c in root_categories"> 
                        <li t-attf-class="list-unstyled col-md-12 col-sm-12 no-padding  #{'mt24' if c_first else ''} #{'mb24' if c_last else ''}"  t-att-id="'li%d' % c_index" >
                            <a  class="mr0 categories_js" t-att-href="'/shop/category/' + slug(c)" t-att-data-value="'category%d' % c_index" t-att-id="'id_category%d' % c_index" t-att-index="c_index">
                                <!-- <span class="category-name" t-att-name="'id_category%d' % c_index" t-esc="'%s ' % c.name"/><small><span class="fa fa-chevron-right ml16 mr16" t-ignore="true"></span></small> -->
                                <span class="category-name col-md-10 col-sm-10 col-lg-10 no-padding mb8" t-att-name="'id_category%d' % c_index" t-esc="'%s ' % c.name"/><small><span class="fa fa-chevron-right pull-right mr16 mt8" t-ignore="true"></span></small>
                            </a>
                        </li> 
                    </t>
                    <t t-else=""> 
                        <li t-attf-class="list-unstyled col-md-12  col-sm-12 no-padding #{'mt24' if c_first else ''}" t-att-data-value="'category%d' % c_index"  >
                            <a  class="mr0 no_parent_js" t-att-href="'/shop/category/' + slug(c)">
                            <span t-esc="'%s ' % c.name" class="category-name col-md-10 col-sm-10 col-lg-10 no-padding mb8"/>
                            </a>
                        </li>
                    </t>
    </template>

    <!-- Quit my cart from principal menu -->
    <template id="custom_cart" inherit_id="website_sale.header" name="Custom my cart">
        <xpath expr="//header//ul[@id='top_menu']/li" position="replace" />
    </template>

    <!-- principal header -->
    <template id="custom_header" inherit_id="website.layout" name="Custom Header">
        <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
            <attribute name="id">main-header</attribute>
        </xpath>
        <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
            <attribute name="class">header-style</attribute>
        </xpath>

        <!-- Replace mobile button menu -->
        <xpath expr="//t[1]/t[1]/div[1]/header[1]/div[1]/div[1]/div[1]/button" position="replace">
            <div type="button" class="navbar-toggle mt0 mb0 mr0 to-hidden-menu" data-toggle="collapse" data-target=".navbar-top-collapse">
                <img class="icon-menu-btn img-responsive" id="icon-menu-btn" src="/web/image/theme_typ.menu-icon" alt="icon-menu"/>
            </div>
            <div type="button" class="navbar-toggle mt0 mb0 mr0 hidden to-hidden-menu">
                <img class="img-responsive search-btn" id="icon-close-btn" src="/web/image/theme_typ.close-icon" alt="icon-close"/>
            </div>
        </xpath> 

        <!-- hidden the menu elements in desktop form the white menu -->
        <xpath expr="//div[hasclass('navbar-default')]/div[1]/div[2]/ul" position="attributes"> 
            <attribute name="class" add="hidden-md hidden-sm hidden-lg text-right mr32 mobile-menu" separator=" "/>
        </xpath>

        <!-- replace the log in -->
        <xpath expr="//div[hasclass('navbar-default')]/div[1]/div[2]/ul/li[hasclass('dropdown')]" position="replace"/> 
        <xpath expr="//div[hasclass('navbar-default')]/div[1]/div[2]/ul/li[hasclass('divider')]" position="replace"/> 

        <xpath expr="//div[hasclass('navbar-default')]/div" position="after">
            <!-- Adding the blue menu -->
            <div class="row blue-color mr0 ml0 mt16 hidden-xs">
                <t t-call="theme_typ.menu_elements"/> 
            </div>
        </xpath>
        <!-- Adding the white class -->
        <xpath expr="//div[hasclass('navbar-default')]" position="attributes">
            <attribute name="class" add="white-color static-menu" separator=" "/>
        </xpath>
        <!-- Adding the menu log in option on  on nav-bar header -->
         <xpath expr="//t[1]/t[1]/div[1]/header[1]/div[1]/div[1]/div[1]/a" position="after">
            <div class="pull-right mt24">
                <!-- log in -->
                <div class="dropdown" t-ignore="true" t-if="website.user_id != user_id">
                    <a href="#" class="dropdown-toggle login-header  to-hidden-menu"  data-toggle="dropdown">
                        <b>
                            <img src="/web/image/theme_typ.icon-profile" alt=""/>
                            <span class="ml8 mr0 hidden-xs hidden-sm user-name" t-esc="(len(user_id.name)&gt;25) and (user_id.name[:23]+'...') or user_id.name"/>
                            <span class="ml0 mr0 hidden-md hidden-lg user-name" t-esc="(len(user_id.name)&gt;10) and (user_id.name[:6]+'...') or user_id.name"/>
                            <span class="caret ml0 hidden-xs hidden-sm"></span>
                            <span class="caret mr4 hidden-md hidden-lg"></span>
                        </b>
                    </a>
                    <ul class="dropdown-menu js_usermenu" role="menu">
                        <li><a href="/my/home" role="menuitem">My Account</a></li>
                        <li id="o_logout"><a t-attf-href="/web/session/logout?redirect=/" role="menuitem">Log out</a></li>
                    </ul>           
                </div>
                <div groups="base.group_public">
                    <!-- log in mobile -->
                    <a t-attf-href="/web/login" class="pull-right hidden-md hidden-sm hidden-lg login-header  to-hidden-menu"><img src="/web/image/theme_typ.icon-profile"  alt=""/></a>
                    <!-- log in desktop -->
                    <a class="pull-right hidden-xs login-header to-hidden-menu" href="#" data-toggle="modal" data-target="#modalLogIn"><img src="/web/image/theme_typ.icon-profile"  alt=""/></a>
                </div>              
                
            </div>
            <!-- search bar -->
            <div class="pull-right col-md-4 col-sm-5 hidden-xs mt24 mt8">
               <t t-call="theme_typ.search"/>
            </div>
            <div class="pull-right mt24 hidden-md hidden-lg hidden-sm">
               <div class="icon-search" >
                        <a id="" href=""  class="to-hidden-menu ">
                            <img src="/web/image/theme_typ.search-icon" class="search-btn" alt=""/>
                        </a>
                </div>
            </div>
        </xpath>
        <!-- Adding the menu cart option on nav-bar header -->
        <!-- shop cart -->
         <xpath expr="//t[1]/t[1]/div[1]/header[1]/div[1]/div[1]/div[1]/div" position="after">
            <div class="pull-right mt24 my-cart-mobile" groups="website.group_website_designer">
                <div class="icon-cart" t-if="website.user_id != user_id">
                    <t t-set="website_sale_order" t-value="website.sale_get_order()" />
                        <a id="my_cart" href="/shop/cart" class="to-hidden-menu " >
                            <img src="/web/image/theme_typ.icon-cart-menu" alt=""/><sup t-attf-class="my_cart_quantity label label-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or ''" />
                        </a>
                </div>
                <!-- Cart for not log users -->
                <div class="icon-cart" t-if="website.user_id == user_id">
                        <a id="my_cart"  href="#" data-toggle="modal" data-target="#modalLogIn" class="hidden-xs">
                            <img src="/web/image/theme_typ.icon-cart-menu" alt=""/>
                        </a>

                        <a id="my_cart" href="/web/login" class="hidden-md hidden-sm hidden-lg to-hidden-menu" >
                            <img src="/web/image/theme_typ.icon-cart-menu" alt=""/>
                        </a>
                </div>
            </div>
        </xpath>

        <!-- MOBILE MENU -->
        <!-- Header menu -->
        <xpath expr="//div[hasclass('collapse', 'navbar-collapse', 'navbar-top-collapse')]/ul" position="before">
            <div class="hidden-md hidden-lg hidden-sm">
                <div class="row menu-mobile">
                    <div class="col-xs-6">
                        <a class="menu-mobile-logo" id="" href="/">
                            <img src="/web/image/theme_typ.typ-logo-footer" class="ml32 mt16" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name" />
                        </a>
                    </div>
                    <div class="col-xs-6">
                        <img class=" icon-close-btn pull-right mt16 mr32 " id="icon-close-btn" src="/web/image/theme_typ.close-icon" alt="icon-close"/>
                    </div>
                </div>
            </div>
        </xpath>

        <!-- deleted divider from collapse menu -->
        <xpath expr="//div[hasclass('collapse', 'navbar-collapse', 'navbar-top-collapse')]/ul/li[1]" position="replace"/>
       <!-- deleted sign in from collapse menu -->
        <xpath expr="//div[hasclass('collapse', 'navbar-collapse', 'navbar-top-collapse')]/ul/li[1]" position="replace"/>

        <!-- MEnu mobile offices, social networks, contact -->
        <xpath expr="//div[hasclass('collapse', 'navbar-collapse', 'navbar-top-collapse')]/ul" position="after">
            <!-- <t t-call="theme_typ.categories_no_child"/> -->
            <t t-call="theme_typ.menu-categories-mobile"/>
            <div class="container text-center hidden-sm hidden-md hidden-lg">
                <div class="row mt16">
                    <h6>Our Offices</h6>
                </div>
                <div class="row mt16 ml32">
                    <t t-call="theme_typ.typ-offices"/>
                </div>
                <t t-set="branches" t-value="res_company.partner_id.child_ids.filtered('website_published')"/>
                <t t-set="cedis" t-value="env.ref('typ.partner_cedis').sudo()"/>
                <div class="row mt24">
                    <p><span t-field="cedis.street_name"/><span> #</span><span t-field="cedis.street_number"/><span>, <br/> Col. </span><span t-field="cedis.street2"/>
                        <span t-field="cedis.zip"/><br/><span t-field="cedis.city"/><span> , </span><span class="state-code" t-field="cedis.state_id.code"/>
                    </p>
                </div> 
                <div class="row mt16">
                    <t t-if="cedis.phone">
                        <a t-field="cedis.phone"/>
                    </t>         
                </div>
                <div class="row mt16">
                    <t t-if="cedis.mobile">
                        <a t-field="cedis.mobile"/>
                    </t>
                </div>
                <div class="row mt16">
                    <t t-if="cedis.email">                
                        <a t-att-href="'mailto:%s' % cedis.email" t-field="cedis.email"/>
                    </t>
                </div>
                <div class="row mt24 mb16">
                    <div class="col-xs-2 col-xs-offset-3">
                        <a target="_BLANK" href="https://www.facebook.com/typrefrigeracion/"> 
                            <img src="/web/image/theme_typ.mobile-fb" class="center-block" alt="Facebook" />
                        </a>
                    </div>
                    <div class="col-xs-2">
                        <a target="_BLANK" href=""> 
                            <img src="/web/image/theme_typ.mobile-tw" class="center-block" alt="Twitter" />
                        </a>
                    </div>
                    <div class="col-xs-2">
                        <a target="_BLANK" href=""> 
                            <img src="/web/image/theme_typ.mobile-insta" class="center-block" alt="Instagram" />
                        </a>
                    </div>
                </div>
            </div>
        </xpath>
        <!-- collapse menu classes -->
        <xpath expr="//div[hasclass('collapse', 'navbar-collapse', 'navbar-top-collapse')]" position="attributes">
            <attribute name="class" add="no-padding-left hidden"  separator=" "/>
        </xpath>      

        <!-- search for mobile -->
        <xpath expr="//div[hasclass('navbar-default')]/div[2]" position="after">
            <div class="row hidden-lg hidden-md hidden-sm">
                <div class="col-xs-12 to-hidden-menu hidden">
                    <t t-call="theme_typ.search"/>
                </div>
            </div>
        </xpath>
        
        <!-- opacity when the menu is open -->
        <xpath expr="//div[hasclass('navbar-default')]/div[1]" position="before">
            <div class="opacity-mobile-menu hidden-md hidden-sm hidden-lg hidden block-menu"></div>
        </xpath>

    </template>

    <!-- search box customized -->
    <template id="search" name="Search Box">
        <form t-att-action="keep and keep('/shop', search=0) or '/shop'" method="get" t-att-class="search_class">
            <div>
                <t t-if="attrib_values">
                    <t t-foreach="attrib_values" t-as="a">
                        <input type="hidden" name="attrib" t-att-value="'%s-%s' % (a[0], a[1])" />
                    </t>
                </t>
                <t t-call="theme_typ.website_search_box" />
            </div>
        </form>
    </template>

    <!-- template search box -->
    <template id="website_search_box" name="Website Search Box">
        <div class="input-group input-group search-style">
            <div class="oe_search">
                <input type="text" name="search" class="search-query form-control oe_search_box search-box" placeholder="What are you looking for?" t-att-value="search" />
            </div>
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default oe_search_button btn"><i class="fa fa-lg fa-search"/></button>
            </span>
        </div>
    </template>


    <!-- general categories template -->
    <template id="general_categories" name="General Categories">
        <t t-if="root_categories">
            <ul class="list-unstyled">
                <t t-foreach="root_categories" t-as="c">
                    <li class="mb8">
                        <a t-att-href="'/shop/category/' + slug(c)">
                            <span t-field='c.name'/>
                        </a>
                    </li>
                </t>
            </ul>
        </t>
    </template>


    <!-- Footer Layout-->
    <template id="footer_default" inherit_id="website.footer_default">
        <xpath expr="//div[@id='footer']" position="replace">
            <div class="container white-color hidden-xs">
                    <!-- Product and media links -->
                    <div class="col-md-4 col-sm-4 mt24">
                        <!-- products -->
                        <div class="row">
                            <p>Products</p>
                        </div>
                        <div class="row">
                            <t t-call="theme_typ.general_categories"/> 
                        </div>
                        <!-- Media link -->
                        <div class="row mt24">
                            <p>Enlaces de medios</p>
                        </div>
                        <div class="row mb8"><a href="/organizations">HVACR Organizations</a></div>
                        <div class="row mb8"><a href="/providers">Providers</a></div>
                    </div>
                    <!-- help and payment methods -->
                    <div class="col-md-3 col-sm-3 mt24">
                        <!-- Help -->
                        <div class="row">
                            <p>Help</p>
                        </div>
                        <div class="row mb8"><a href="/aboutus">About us</a></div>
                        <div class="row mb8"><a href="">Frequent questions</a></div>
                        <div class="row mb8"><a href="">Terms &amp; Conditions</a></div>
                        <div class="row mb8"><a href="">Shipping policies</a></div>
                        <div class="row mb8"><a href="/blog">Blog</a></div>
                        <div class="row mb8"><a href="/contactus">Contact</a></div>
                        <!-- Paid methods -->
                        <div class="row mt24">
                            <p>Payment Methods</p>
                            <!-- mastercard and visa -->
                            <div class="row mt16">
                                <div class="col-md-4 col-sm-4">
                                    <img src="/web/image/theme_typ.mastercard-icon" class="center-block" alt="Master Card" />
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <img src="/web/image/theme_typ.visa-icon" class="center-block" alt="Visa" />
                                </div>
                            </div>
                            <!-- American express and paypal -->
                            <div class="row mt24">
                                <div class="col-md-4 col-sm-4">
                                    <img src="/web/image/theme_typ.american-express-icon" class="center-block" alt="American Express" />
                                </div>
                                <div class="col-md-4 col-sm-4">
                                    <img src="/web/image/theme_typ.paypal-icon" class="center-block" alt="Paypal" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Offices, social networks and newsletter -->
                    <div class="col-md-4 col-md-offset-1 col-sm-4 col-sm-offset-1 mt24">
                        <!-- Offices -->
                        <div class="row">
                            <p>Our Offices</p>  
                            <div class="row">
                                <div class="col-md-12">
                                    <t t-call="theme_typ.typ-offices"/>
                                </div>
                            </div>
                        </div>    
                        <!-- Newsletter -->
                        <div class="row mt24">
                            <p>Subscribe to our newsletter</p>
                            <t t-set="object" t-value="request.env.ref('website_blog.blog_blog_1')"/>
                            <div class="input-group mb32 col-md-10 js_follow"  t-att-data-id="object.id" t-att-data-object="object._name" t-att-data-follow="object.id and object.message_is_follower and 'on' or 'off'" t-att-data-unsubscribe="'unsubscribe' if 'unsubscribe' in request.params else None">
                                <input type="email" name="email" class="js_follow_email form-control" placeholder="Type your email"/>
                                <div class="input-group-btn">
                                    <button t-attf-class="btn btn-primary js_follow_btn suscribe" type="button"><span class="glyphicon glyphicon-chevron-right"></span></button>
                                    <button t-attf-class="btn btn-primary js_unfollow_btn" type="button"><img src="/web/image/theme_typ.icon-close-modal" alt="Cerrar Modal"/></button>
                                </div>
                            </div>
                        </div>
                        <!-- social networks -->
                        <div class="row">
                            <p>Follow us</p>
                            <div class="row mt16">
                                <div class="col-md-2 col-sm-2">
                                     <a target="_BLANK" href="https://www.facebook.com/typrefrigeracion/"> 
                                        <img src="/web/image/theme_typ.fb-icon" class="center-block" alt="Facebook" />
                                    </a>
                                </div>
                                <div class="col-md-2 col-sm-2">
                                     <a target="_BLANK" href=""> 
                                        <img src="/web/image/theme_typ.tw-icon" class="center-block" alt="Twitter" />
                                    </a>
                                </div>
                                <div class="col-md-2 col-sm-2">
                                    <a target="_BLANK" href=""> 
                                        <img src="/web/image/theme_typ.instagram-icon" class="center-block" alt="Instagram" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            <!-- footer mobile -->
            <div class="container white-color hidden-md hidden-sm hidden-lg mobile-footer">
                <!-- Footer sections -->
                <div aria-multiselectable="true" class="panel-group footer-accordeon mt24 mb0" id="accordion" role="tablist">
                    <div class="panel  mt0">
                        <div class="panel-heading" id="headingOne" role="tab">
                            <p class="panel-title">
                                <a aria-controls="collapseOne" aria-expanded="false" class="collapsed" data-parent="#accordion" data-toggle="collapse" href="#collapseOne" role="button">
                                    Products
                                </a>
                            </p>
                        </div>
                        <div aria-labelledby="headingOne" class="panel-collapse collapse" id="collapseOne" role="tabpanel">
                            <div class="panel-body no-padding-bottom no-padding-top">
                                <t t-call="theme_typ.general_categories"/> 
                            </div>
                        </div>
                    </div>
                    <div class="panel  mt0">
                        <div class="panel-heading" id="headingTwo" role="tab">
                            <p class="panel-title">
                                <a aria-controls="collapseTwo" aria-expanded="false" class="collapsed" data-parent="#accordion" data-toggle="collapse" href="#collapseTwo" role="button">
                                    Help
                                </a>
                            </p>
                        </div>
                        <div aria-labelledby="headingTwo" class="panel-collapse collapse ml16" id="collapseTwo" role="tabpanel">
                            <div class="panel-body  no-padding-bottom no-padding-top">
                                <div class="row mb8"><a href="/aboutus">About us</a></div>
                                <div class="row mb8"><a href="">Frequent questions</a></div>
                                <div class="row mb8"><a href="">Terms &amp; Conditions</a></div>
                                <div class="row mb8"><a href="">Shipping policies</a></div>
                                <div class="row mb8"><a href="/blog">Blog</a></div>
                                <div class="row mb8"><a href="/contactus">Contact</a></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel mt0">
                        <div class="panel-heading" id="headingThree" role="tab">
                            <p class="panel-title">
                                <a aria-controls="collapseThree" aria-expanded="false" class="collapsed show_office" data-parent="#accordion" data-toggle="collapse" href="#collapseThree" role="button">
                                    Our Offices
                                </a>
                            </p>
                        </div>
                        <div aria-labelledby="headingThree" class="panel-collapse collapse" id="collapseThree" role="tabpanel">
                            <div class="panel-body  no-padding-bottom no-padding-top">
                                    <t t-call="theme_typ.typ-offices"/>                                                                         
                            </div>
                        </div>
                    </div>
                    <div class="panel mt0">
                        <div class="panel-heading" id="headingFour" role="tab">
                            <p class="panel-title">
                                <a aria-controls="collapseFour" aria-expanded="false" class="collapsed show_media" data-parent="#accordion" data-toggle="collapse" href="#collapseFour" role="button">
                                    Enlaces de medios
                                </a>
                            </p>
                        </div>
                        <div aria-labelledby="headingFour" class="panel-collapse collapse ml16" id="collapseFour" role="tabpanel">
                            <div class="panel-body no-padding-bottom no-padding-top">
                                <div class="row mb8"><a href="/organizations">HVACR Organizations</a></div>
                                <div class="row mb8"><a href="/providers">Providers</a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Payment methods -->
                <div class="row mt16">
                    <div class="col-xs-10 col-xs-offset-1">
                        <div class="row">
                            <p>Payment Methods</p>
                        </div>
                        <div class="row">
                            <div class="col-xs-2 no-padding-left">
                                <img src="/web/image/theme_typ.mastercard-icon" alt="Mastercard" />
                            </div>
                            <div class="col-xs-2 col-xs-offset-1 no-padding-left">
                                <img src="/web/image/theme_typ.visa-mobile" alt="Visa" />
                            </div>
                            <div class="col-xs-2 col-xs-offset-1 no-padding-left">
                                <img src="/web/image/theme_typ.ae-mobile" alt="American Express" />
                            </div>
                            <div class="col-xs-2 col-xs-offset-1 no-padding-left">
                                <img src="/web/image/theme_typ.paypal-mobile" alt="Paypal" />
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Newsletter -->
                <div class="row mt24">
                    <div class="col-xs-10 col-xs-offset-1">
                        <div class="row">
                            <p>Subscribe to our newsletter</p>
                        </div>
                        <div class="row">
                            <t t-set="object" t-value="request.env.ref('website_blog.blog_blog_1')"/>
                            <div class="input-group col-xs-12 js_follow"  t-att-data-id="object.id" t-att-data-object="object._name" t-att-data-follow="object.id and object.message_is_follower and 'on' or 'off'" t-att-data-unsubscribe="'unsubscribe' if 'unsubscribe' in request.params else None">
                                <input type="email" name="email" class="js_follow_email form-control" placeholder="Type your email"/>
                                <div class="input-group-btn">
                                    <button t-attf-class="btn btn-primary js_follow_btn suscribe" type="button"><span class="glyphicon glyphicon-chevron-right"></span></button>
                                    <button t-attf-class="btn btn-primary js_unfollow_btn" type="button"><img src="/web/image/theme_typ.icon-close-modal" alt="Cerrar Modal"/></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>               
                <!-- social networks -->
                <div class="row mt24">
                    <div class="col-xs-11 col-xs-offset-1">
                        <div class="row">
                            <p>Follow us</p>
                        </div>
                        <div class="row">
                            <div class="col-xs-1 no-padding-left">
                                <a target="_BLANK" href="https://www.facebook.com/typrefrigeracion/"> 
                                    <img src="/web/image/theme_typ.fb-icon" alt="Facebook" />
                                </a>
                            </div>
                            <div class="col-xs-1 col-xs-offset-1 no-padding-left">
                                <a target="_BLANK" href=""> 
                                    <img src="/web/image/theme_typ.tw-icon" alt="Twitter" />
                                </a>
                            </div>
                            <div class="col-xs-1 col-xs-offset-1 no-padding-left">
                                <a target="_BLANK" href=""> 
                                    <img src="/web/image/theme_typ.instagram-icon" alt="Instagram" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <!-- menu categories mobile-->
    <template id="menu-categories-mobile" name="Footer Categories">
            <div aria-multiselectable="true" class="panel-group text-right hidden-md hidden-lg hidden-sm mb0 panel-mobile-menu" id="accordion-footer" role="tablist">
                     <t t-call="theme_typ.categories_no_child"/>
                        <t t-if="root_categories">
                            <t t-foreach="root_categories" t-as="c">
                                <t t-call="theme_typ.categories_tree_mobile"/>
                            </t>
                        </t>
            </div>
    </template>

    <!-- recursive categories mobile -->
    <template id="categories_tree_mobile" name="Recursive template for categories tree">
        <t t-set="categ_url" t-value="'/shop/category/' + slug(c)"/>
        <li t-if="c.parent_id in root_categories" class="mt8 mr32">
            <a t-att-href="categ_url" >
                <span t-field='c.name'/> <br/>
            </a>
        </li>
        <t t-if="c.child_id and c in root_categories">
            <div class="panel no-padding mt0">
                <div class="panel-heading parent no-padding-left" t-att-id="'heading%d' % c_index" role="tab">
                    <p class="panel-title">
                        <a t-att-aria-controls="'collapse%d' % c_index" aria-expanded="false"  class="collapsed"  data-parent="#accordion-footer" data-toggle="collapse" t-att-href="'#collapse%d' % c_index"  role="button">
                        <span t-esc="'%s ' % c.name"/><!-- <small><span class="fa fa-chevron-right ml16 mr16" t-ignore="true"></span></small> -->
                        </a>                 
                    </p>
                </div>
                <div t-att-aria-labelledby="'heading%d' % c_index" class="panel-collapse collapse" t-att-id="'collapse%d' % c_index" role="tabpanel">
                    <div class="panel-body">
                        <ul class="list-unstyled">
                            <t t-foreach="c.child_id" t-as="c">
                                <t t-call="theme_typ.categories_tree_mobile"/>
                            </t>
                        </ul>
                    </div>
                </div>
            </div>
        </t>          
       
    </template>

    <template id="categories_no_child" name="Recursive template for categories tree">
            <t t-if="root_categories">
                <t t-foreach="root_categories" t-as="c">
                    <t t-set="categ_url" t-value="'/shop/category/' + slug(c)"/>       
                        <t t-if="not (c.child_id and c in root_categories)"> 
                            <div class="panel no-padding mt0 ">
                            <div class="panel-heading no-padding-left">
                                    <p class="panel-title">
                                        <a  t-att-href="categ_url" role="button">
                                        <span t-esc="'%s ' % c.name" class="mr48"/>
                                        </a>                 
                                    </p>
                                </div>
                            </div>
                        </t> 
                </t>
            </t>        
    </template>


    <!-- offices -->
    <template id="typ-offices" name="TyP Offices">
         <t t-set="branches" t-value="res_company.partner_id.child_ids.filtered('website_published')"/>
         <t t-foreach="branches" t-as="branch">
            <div class="row col-md-6 col-sm-6 col-xs-6 mb8">
                <a t-field="branch.name" ></a>  
            </div>    
        </t>
    </template>

    <!-- TyP copyright -->
    <template id="footer_copyright" inherit_id="website.layout_footer_copyright" name="TyP Copyright">
        <xpath expr="//div[hasclass('container', 'mt16', 'mb8')]" position="replace">
            <!-- desktop copyright -->
                <div class="container white-color mt32 mb8">
                    <img src="/web/image/theme_typ.typ-logo-footer" class="center-block" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name" />
                    <div class="text-center text-copyright mt16 mb16 hidden-xs">TYP Refrigeracion S. A. de C. V. all rights reserved 2018 &amp;reg; </div>
                    <div class="text-center text-copyright mt8 mb16 hidden-md hidden-sm hidden-lg">TyP all rights reserved 2018 &amp;reg;</div>
                </div>
        </xpath>
    </template>

    <!-- TyP menu logo -->
    <template id="layout_logo_show" inherit_id="website.layout_logo_show">
        <xpath expr="//a" position="replace">
           <a class="navbar-brand logo " id="" href="/" style="padding-left: 0px; padding-right: 0px;">
             <img src="/web/image/theme_typ.typ-logo" class="" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name" /> 
            </a>
        </xpath>
    </template>

    
    <template id="block-page">
        <div class="opacity hidden-md hidden-sm hidden-lg hidden block-body"></div>
    </template>

    <template id="layout" inherit_id="website.layout" priority="14">
        <xpath expr="//div[@id='wrapwrap']/main/t" position="before">
            <t t-call="theme_typ.block-page"/>
        </xpath>
        <xpath expr="//t[@t-set='head_website']" position="inside">
            <t t-set="root_categories" t-value="env['product.public.category'].search([('parent_id', '=', None)])"/>          
        </xpath>
    </template>


</odoo>
