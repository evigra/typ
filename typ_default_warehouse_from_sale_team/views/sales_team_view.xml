<?xml version='1.0' encoding='UTF-8'?>
    <odoo>

       <record model="ir.ui.view" id="view_typ_default_warehouse_from_sale_team_form">
            <field name="name">typ.default.warehouse.from.sale.team.form</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="default_warehouse_from_sale_team.view_crm_team_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='conf_journal']" position="inside">
                    <field name="journal_guide_id" modifiers="{}"/>
                    <field name="journal_landed_id" modifiers="{}"/>
                </xpath>
                <xpath expr="//group[@name='conf_warehouse']" position="inside">
                    <field name="sale_pricelist_id" modifiers="{}"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_form_pricelists_available" model="ir.ui.view">
            <field name="name">partner.form.pricelists.available</field>
            <field name="model">res.partner</field>
            <field name="groups_id" eval="[(4, ref('product.group_sale_pricelist')), ]"/>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="inside">
                    <separator string="Pricelist's partner"/>
                    <field name="pricelist_ids"/>
                </xpath>
            </field>
        </record>

        <record id="view_sale_order_form_onchange_partner" model="ir.ui.view">
            <field name="name">sale.order.form.onchange.partner</field>
            <field name="model">sale.order</field>
            <field name="priority">110</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="domain" translation="off">[('partner_ids', 'in', partner_id)]</attribute>
                </xpath>
            </field>
        </record>

       <record id='view_partner_form_buyer_assignment' model='ir.ui.view'>
            <field name='name'>partner.form.buyer.assignment</field>
            <field name='model'>res.partner</field>
            <field name='inherit_id' ref='base.view_partner_form'/>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                    <field name="user_id" position="after">
                            <field name="buyer_id"/>
                    </field>
            </field>
        </record>

        <record id="view_res_partner_filter_buyer" model="ir.ui.view">
            <field name="name">res.partner.filter.buyer</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                    <group>
                            <filter string="buyer" icon="terp-partner" domain="[]" context="{'group_by': 'buyer_id'}" />
                    </group>
            </field>
        </record>


    </odoo>
