<?xml version='1.0' encoding='UTF-8'?>
<openerp>
    <data>
        <record id="view_hr_employee_form_inherit_replace" model="ir.ui.view">
            <field name="name">hr.employee.personal_information.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Personal Information']" position="attributes">
                    <!-- It is necesary because we need to keep without group for employees -->
                    <attribute name="groups" translation="off">base.group_user</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_hr_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.expedient.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" postion="inside">
                    <label for="skype_user"/>
                    <field name="skype_user"/>
                    <field name="user_boolean" invisible="1"/>
                </xpath>
                <xpath expr="//page[@string='Personal Information']" position="attributes">
                    <attribute name="attrs" translation="off">{'invisible': [('user_boolean','=',False)]} </attribute>
                </xpath>
                <xpath expr="//page[@string='Personal Information']" position="after">
                    <page string="Expedient" groups="base.group_hr_user">
                        <group>
                            <group string="Expedient">
                                <field name="curp"/>
                                <field name="number"/>
                                <field name="ssnid"/>
                                <field name="last_degree" />
                                <field name="blood_type" />
                                <field name="infonavit_credit" />
                            </group>
                            <group string="Deregister">
                                <field name="entry_date" />
                                <field name="leaving_date"/>
                                <field name="reason_leaving" />
                            </group>
                        </group>
                        <group string="Beneficiaries">
                            <field name="hr_beneficiary_ids" nolabel="1" widget="many2many"/>
                        </group>
                        <group string="Family references">
                            <field name="hr_reference_ids" nolabel="1" widget="many2many"/>
                        </group>
                        <group string="Auxiliar">
                            <field name="hr_auxiliar_ids" nolabel="1" widget="many2many"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_hr_employee_expedient_form" model="ir.ui.view">
            <field name="name">hr.employee.age.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Birth']" position="inside">
                    <field name="age"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_employee_form_hr_checklist">
            <field name="name">hr.employee.form.checklist</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="typ_hr.view_hr_employee_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Expedient']" position="inside">
                    <group string="Documents">
                        <field name="hr_employee_check_ids"  nolabel="1" widget="many2many_checkboxes"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
