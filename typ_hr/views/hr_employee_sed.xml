<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="view_hr_employee_report_form" model="ir.ui.view">
        <field name="name">hr.employee.report.form</field>
        <field name="model">hr.employee.report</field>
        <field name="arch" type="xml">
            <form string="Report">
                <header>
                    <button name="action_done" type="object" string="Revised" states="draft"
                        groups="typ_hr.report_group_manager_revised"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Month+Year, ex: 'January2020'" required="True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" string="User" readonly="1"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="date_report"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="job_id"/>
                        </group>
                    </group>
                    <group string="Indicators">
                        <field name="report_line" mode="tree">
                            <form string="Report lines">
                                <group>
                                    <group>
                                        <field name="indicator_id" required="1" force_save="1"/>
                                        <field name="description" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="weight" readonly="1"/>
                                        <field name="weighted_weight" readonly="1"/>
                                        <field name="metric" readonly="1"/>
                                        <field name="result" required="1"/>
                                    </group>
                                </group>
                            </form>
                            <tree>
                                <field name="indicator_id"/>
                                <field name="indicator_code"/>
                                <field name="description"/>
                                <field name="weight"/>
                                <field name="weighted_weight"/>
                                <field name="metric"/>
                                <field name="result"/>
                                <field name="evaluation"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="evaluation_total">
                            <field name="total_weighted_weight"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="evaluation_report"/>
                            </div>
                            <field name="evaluation_report" nolabel="1" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_employee_report_tree" model="ir.ui.view">
        <field name="name">hr.employee.report.tree</field>
        <field name="model">hr.employee.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_report"/>
                <field name="state"/>
                <field name="department_id"/>
                <field name="evaluation_report"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_employee_indicator_form" model="ir.ui.view">
        <field name="name">hr.employee.indicator.form</field>
        <field name="model">hr.employee.indicator</field>
        <field name="arch" type="xml">
            <form string="Indicator">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="indicator_code"/>
                            <field name="description"/>
                            <field name="weight"/>
                            <field name="weighted_weight"/>
                        </group>
                        <group>
                            <field name="metric_type"/>
                            <field name="metric_great" attrs="{'invisible': [('metric_type', '=', 'less')], 'required': [('metric_type', '=', 'greater')]}"/>
                            <field name="metric_less" attrs="{'invisible': [('metric_type', '=', 'greater')], 'required': [('metric_type', '=', 'less')]}"/>
                            <field name="metric"/>
                        </group>
                    </group>
                </form>
            </form>
        </field>
    </record>

    <record id="view_hr_employee_indicator_tree" model="ir.ui.view">
        <field name="name">hr.employee.indicator.tree</field>
        <field name="model">hr.employee.indicator</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="indicator_code"/>
                <field name="description"/>
                <field name="weight"/>
                <field name="weighted_weight"/>
                <field name="metric"/>
            </tree>
        </field>
    </record>

    <record id="view_report_filter" model="ir.ui.view">
        <field name="name">hr.employee.report.search</field>
        <field name="model">hr.employee.report</field>
        <field name="arch" type="xml">
            <search string="Reports">
                <field name="name" string="Reports"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <separator/>
                <filter string="Revised" name="state" domain="[('state','=','done')]"/>
                <filter string="Pending" name="state" domain="[('state','=','draft')]"/>
            </search>
        </field>
    </record>

    <record id="view_indicator_filter" model="ir.ui.view">
        <field name="name">hr.employee.indicator.search</field>
        <field name="model">hr.employee.indicator</field>
        <field name="arch" type="xml">
            <search string="Indicators">
                <field name="name" string="Indicators"/>
                <field name="indicator_code"/>
            </search>
        </field>
    </record>

    <record id="open_module_tree_report" model="ir.actions.act_window">
        <field name="name">Reports</field>
        <field name="res_model">hr.employee.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_report_filter"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Click to create a report.
            </p><p>
                Reports.
            </p>
        </field>
    </record>

    <record id="open_module_tree_indicator" model="ir.actions.act_window">
        <field name="name">Indicators</field>
        <field name="res_model">hr.employee.indicator</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_indicator_filter"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Click to create a indicator.
            </p><p>
                Indicators.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_hr_employee_report"
        parent="hr.menu_hr_root"
        name="SED"
        sequence="90"
        groups="base.group_user"/>
    <menuitem
        action="open_module_tree_report"
        id="menu_hr_employee_report_tree"
        parent="typ_hr.menu_hr_employee_report"
        sequence="10"
        groups="base.group_user"/>
    <menuitem
        action="open_module_tree_indicator"
        id="menu_hr_employee_indicator_tree"
        parent="typ_hr.menu_hr_employee_report"
        sequence="20"
        groups="hr.group_hr_user"/>
</odoo>
