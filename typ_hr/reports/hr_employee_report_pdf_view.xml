<?xml version="1.0"?>
<openerp>
    <data>
        <template id="typ_hr.report_expedient">
            <t t-call="report.html_container">
                <t t-set="data_report_margin_top" t-value="25" />
                <t t-set="data_report_header_spacing" t-value="19" />
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'user_id.partner_id.lang', 'typ_hr.hr_employee_expedient_report_pdf')" />
                </t>
            </t>
        </template>
        <template id="hr_employee_expedient_report_pdf">
            <t t-call="typ_hr.external_layout_expedient">
                <!-- Global var related to home address for l10n_mx_partner_address -->
                <t t-set="address" t-value="o.address_home_id"/>
                <t t-set="contract" t-value="o.contract_id"/>
                <div class="page">
                    <h4>
                        <strong>
                            <span t-field="o.name" />
                        </strong>
                    </h4>
                    <div class="row">
                        <h5 style="border-bottom: 1px solid #ccc; line-height: 2em;">
                            <strong>Personal Information</strong>:
                        </h5>
                        <div class="col-xs-6">
                            <address>
                                <strong>Gender</strong>:
                                <span t-field="o.gender" />
                                <br />
                                <strong>Birthday</strong>:
                                <span t-field="o.birthday" />
                                <br />
                                <strong>Age</strong>:
                                <span t-field="o.age" />
                                <br />
                                <strong>Place of birth</strong>:
                                <span t-field="o.place_of_birth" />
                                <br />
                                <strong>Last Degree</strong>:
                                <span t-field="o.last_degree" />
                                <br />
                                <strong>Marital</strong>:
                                <span t-field="o.marital" />
                                <br />
                                <strong>CURP</strong>:
                                <span t-field="o.curp" />
                            </address>
                            <h5 style="border-bottom: 1px solid #ccc; line-height: 2em;">
                                <strong>Address</strong>:
                            </h5>
                            <address>
                                <strong>Street</strong>:
                                <span t-field="address.street" />
                                <br />
                                <strong>Number</strong>:
                                <span t-field="address.l10n_mx_street3" />
                                <br />
                                <strong>Colony</strong>:
                                <span t-field="address.street2" />
                                <br />
                                <strong>ZIP</strong>:
                                <span t-field="address.zip" />
                                <br />
                            </address>
                        </div>
                        <div class="col-xs-6">
                            <address>
                                <strong>Municipality</strong>:
                                <span t-field="address.city" />
                                <br />
                                <strong>VAT</strong>:
                                <span t-field="address.vat" />
                                <br />
                                <strong>SSN No</strong>:
                                <span t-field="o.ssnid" />
                                <br />
                                <strong>Telephone</strong>:
                                <span t-field="address.mobile" />
                                <br />
                                <strong>Email</strong>:
                                <span t-field="address.email" />
                                <br />
                                <strong>Blood type</strong>:
                                <span t-field="o.blood_type" />
                                <br />
                                <strong>Infonavit credit</strong>:
                                 <t t-if="o.infonavit_credit">
                                    <span t-field="o.infonavit_credit"/>
                                </t>
                               <t t-if="not o.infonavit_credit">
                                    <span>N/A</span>
                                </t>
                            </address>
                            <h5 style="border-bottom: 1px solid #ccc; line-height: 2em;">
                                <strong>In case of accident</strong>:
                            </h5>
                            <address>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Telephone</th>
                                            <th>Address</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.hr_auxiliar_ids" t-as="aux">
                                            <tr>
                                                <td>
                                                    <span t-field="aux.name" />
                                                </td>
                                                <td>
                                                    <span t-field="aux.telephone" />
                                                </td>
                                                <td>
                                                    <span t-field="aux.address" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </address>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <h5 style="border-bottom: 1px solid #ccc; line-height: 2em;">
                                <strong>Family references</strong>
                            </h5>
                            <address>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Full name</th>
                                            <th>Type</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.hr_reference_ids" t-as="reference">
                                            <tr>
                                                <td>
                                                    <span t-field="reference.name" />
                                                </td>
                                                <td>
                                                    <span t-field="reference.friendly" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </address>
                        </div>
                        <div class="col-xs-6">
                            <h5 style="border-bottom: 1px solid #ccc; line-height: 2em;">
                                <strong>Beneficiaries</strong>
                            </h5>
                            <address>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Full Name</th>
                                            <th>Address</th>
                                            <th>VAT</th>
                                            <th>Percentage</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.hr_beneficiary_ids" t-as="beneficiary">
                                            <tr>
                                                <td>
                                                    <span t-raw="beneficiary.name" />
                                                </td>
                                                <td>
                                                    <span t-field="beneficiary.address" />
                                                </td>
                                                <td>
                                                    <span t-field="beneficiary.rfc" />
                                                </td>
                                                <td>
                                                    <span t-field="beneficiary.percentage" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </address>
                        </div>
                    </div>
                    <div class="row">
                        <h5 style="border-bottom: 1px solid #ccc; line-height: 2em;" align="center">
                            <strong>Company Information</strong>
                        </h5>
                        <address>
                            <div class="col-xs-4">
                                <strong>Entry date</strong>:
                                <span t-field="o.entry_date" />
                                <br />
                                <strong>ID</strong>:
                                <span t-field="o.number" />
                                <br />
                                <strong>Job title</strong>:
                                <span t-field="o.job_id" />
                                <br />
                            </div>
                            <div class="col-xs-4">
                                <strong>Salary</strong>:
                                <span t-field="contract.wage" />
                                <br />
                                <strong>Daily salary</strong>:
                                <span t-field="contract.daily_salary" />
                                <br />
                                <strong>Integrate daily salary</strong>:
                                <span t-field="contract.integrate_daily_salary" />
                                <br />
                            </div>
                            <div class="col-xs-4">
                                <strong>Bank Account Number</strong>
                                <br />
                                <span t-field="o.bank_account_id.acc_number" />
                            </div>
                        </address>
                    </div>
                    <div class="row" style="margin-top: 30px">
                        <h5 align="center">
                            <strong>Documents Checklist</strong>
                        </h5>
                        <address>
                            <table class="table table-hover">
                                <tbody>
                                    <t t-foreach="o.hr_employee_check_ids" t-as="check">
                                        <tr>
                                            <td rowspan="3">
                                                <strong>
                                                    <span t-field="check.name" />
                                                </strong>
                                                [<span t-raw="check.doc_type" />]
                                        </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </address>
                        <strong>Leyend</strong>
                        <ul>
                            <li>
                                <strong>RD</strong>: <span>Recruitment documents</span></li>
                            <li>
                                <strong>CD</strong>: <span>Company documents</span></li>
                        </ul>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
