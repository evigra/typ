<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_accounting_employee_contact" model="res.groups">
        <field name="name">Users that can see contact employee in partner</field>
        <field name="comment">This group can see contact employee, but not see their address</field>
    </record>
    <record id="fleet_group_manager_configuration" model="res.groups">
        <field name="name">Users that can see fleet configuration menu</field>
        <field name="comment">This group can see fleet configuration menu</field>
    </record>
    <record id="fleet_rule_vehicle_visibility_user_manager" model="ir.rule">
        <field name="name">User manager can only see his/her vehicle</field>
        <field name="model_id" ref="model_fleet_vehicle"/>
        <field name="groups" eval="[(4, ref('fleet.fleet_group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="domain_force">[('vehicle_manager','=',user.partner_id.id)]</field>
    </record>
    <record id="report_group_manager_revised" model="res.groups">
        <field name="name">Users who can review indicator reports</field>
        <field name="comment">These users can review indicator reports</field>
    </record>
    <record id="report_group_manager_view" model="res.groups">
        <field name="name">Users who can see all reports</field>
        <field name="comment">These users can see all reports</field>
    </record>
    <record id="per_rule_manager_user" model="ir.rule">
        <field name="model_id" ref="model_hr_employee"/>
        <field name="name">For manager</field>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
    <record id="per_rule_employee_user" model="ir.rule">
        <field name="model_id" ref="model_hr_employee"/>
        <field name="name">For employee</field>
        <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
    <record id="per_rule_report_employee_user" model="ir.rule">
        <field name="model_id" ref="model_hr_employee_report"/>
        <field name="name">For employee</field>
        <field name="domain_force">['|','|',('user_id.id','=',user.id),('employee_id.parent_id.user_id','=',user.id),('employee_id.coach_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
    <record id="per_rule_report_employee_manager" model="ir.rule">
        <field name="model_id" ref="model_hr_employee_report"/>
        <field name="name">For Manager</field>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('typ_hr.report_group_manager_view'))]"/>
    </record>
</odoo>
