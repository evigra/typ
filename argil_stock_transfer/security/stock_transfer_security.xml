<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">
        <record model="ir.module.category" id="module_category_stock_transfer_management">
            <field name="name">Stock Transfer</field>
            <field name="description">Helps you manage your incoming and outgoing stock transfers.</field>
            <field name="sequence">5</field>
        </record>
    <record id="group_stock_transfer_in" model="res.groups">
        <field name="name">Manage Stock Transfer In</field>
        <field name="category_id" ref="module_category_stock_transfer_management"/>
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
    </record>

    <record id="group_stock_transfer_out" model="res.groups">
        <field name="name">Manage Stock Transfer Out</field>
        <field name="category_id" ref="module_category_stock_transfer_management"/>
        <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
    </record>
    

</data>
    
<data noupdate="1">
    <!-- Multi - Company Rules -->

    <record model="ir.rule" id="stock_transfer_comp_rule">
        <field name="name">Stock Transfer multi-company</field>
        <field name="model_id" ref="model_stock_transfer"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
</data>
</openerp>
