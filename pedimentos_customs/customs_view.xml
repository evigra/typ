<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    
    <!--  ================= SECUENCIA XML ================= -->
        <record id="seq_type_pedimento" model="ir.sequence.type">
            <field name="name">Pedimento Aduanal</field>
            <field name="code">pedimento.config</field>
        </record>

        <record id="seq_service_order" model="ir.sequence">
            <field name="name">Pedimento Aduanal</field>
            <field name="code">pedimento.config</field>
            <field name="prefix">PA-</field>
            <field name="padding">6</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
        </record>
    <!-- =================================================== -->
        <record id="seq_type_pedimento_lot" model="ir.sequence.type">
            <field name="name">Pedimentos</field>
            <field name="code">stock.production.lot.pedimento</field>
        </record>

        <record id="seq_pedimento_lot" model="ir.sequence">
            <field name="name">Pedimentos</field>
            <field name="code">stock.production.lot.pedimento</field>
            <field name="prefix">P</field>
            <field name="padding">6</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
        </record>
    <!-- =================================================== -->
        <record id="pedimento_general" model="pedimento.config">
            <field name="sequence_id" ref="seq_service_order"/>
            <field name="general">1</field>
        </record>

    <!--  ================= VISTAS ================= -->

      <record id="pedimento_custom_tree" model="ir.ui.view">
            <field name="name">pedimento.custom.tree</field>
            <field name="model">pedimento.custom</field>
            <field name="arch" type="xml">
                <tree string="Pedimentos Aduanales" >
                  <field name="pedimento_sequence"/>

                  <field name="date" />
                  <!-- <field name="name" /> -->
                  <field name="aduana_id" />
                  <field name="port_entrance" />
                  <field name="currency_id" invisible="1"/>
                </tree>                
            </field>
        </record>

        <record id="pedimento_custom_filter" model="ir.ui.view">
          <field name="name">pedimento.custom.search</field>
          <field name="model">pedimento.custom</field>
          <field name="type">search</field>
          <field name="priority" eval="5"/>
          <field name="arch" type="xml">
            <search string="Pedimentos">
                  <field name="pedimento_sequence"/>
                  <field name="date" />
                  <!-- <field name="name" /> -->
                  <field name="aduana_id" />
                  <field name="port_entrance" />
                  <field name="currency_id" invisible="1"/>
                  <group expand="0" string="Agrupar Por...">
                    <!-- <filter string="Agente Aduanal" name="agente" icon="terp-go-home" context="{'group_by':'name'}"/> -->
                    <filter string="Aduana" name="aduana" icon="terp-go-home" context="{'group_by':'aduana_id'}"/>
                    <filter string="Puerto Entrada" name="port" icon="terp-go-home" context="{'group_by':'port_entrance'}"/>
                    <filter string="Moneda" name="currency" icon="terp-go-home" context="{'group_by':'currency_id'}"/>
                  </group>
            </search>
          </field>
        </record>
        <record id="pedimento_custom_form" model="ir.ui.view">
            <field name="name">pedimento.custom.form</field>
            <field name="model">pedimento.custom</field>
            <field name="arch" type="xml">
                <form string="Pedimentos Aduanales" version="7.0">
                    
                    <sheet>
                       <separator string="Definicion de Pedimentos Aduanales" />
                       <group col="4">
                        <h2>
                            <field name="pedimento_sequence"/>
                        </h2>
                        <newline />
                        <field name="date" />
                        <!-- <field name="name" attrs="{'required':[('type_change','=',None)]}"/> -->
                        <field name="aduana_id" domain="[('supplier','=',True),('broker','=',True)]"/>
                        <field name="port_entrance" />
                        <field name="currency_id" invisible="1"/>
                        <field name="type_change" />
                       </group>
                       <h4>NOTAS</h4>
                       <field name="notes"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/> 
                    </div>   
                </form>
            </field>
        </record>

        <record id="pedimento_custom_action" model="ir.actions.act_window">
            <field name="name">Pedimentos Aduanales</field>
            <field name="res_model">pedimento.custom</field>
            <field name="search_view_id" ref="pedimento_custom_filter"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="pedimento_config_tree" model="ir.ui.view">
            <field name="name">pedimento_config.tree</field>
            <field name="model">pedimento.config</field>
            <field name="arch" type="xml">
                <tree string="Secuencias Aduanales" editable="bottom" >
                  <field name="sequence_id" />
                  <field name="aduana_id" attrs="{'required':[('general','=',False)]}"/>
                  <field name="general" attrs="{'readonly':[('aduana_id','!=',False)]}"/>
                </tree>                
            </field>
        </record>

        <record id="pedimento_config_form" model="ir.ui.view">
            <field name="name">pedimento.config.form</field>
            <field name="model">pedimento.config</field>
            <field name="arch" type="xml">
                <form string="Secuencias Aduanales" version="7.0">
                    
                    <sheet>
                       <separator string="Definicion de Secuencias" />
                        <group col="4">
                           <field name="sequence_id" />
                           <field name="aduana_id" attrs="{'required':[('general','=',False)]}" />
                           <field name="general" attrs="{'readonly':[('aduana_id','!=',False)]}"/>
                        </group>
                    </sheet>  
                </form>
            </field>
        </record>

        <record id="pedimento_config_action" model="ir.actions.act_window">
            <field name="name">Configuracion</field>
            <field name="res_model">pedimento.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

  <!-- _____________________ HERENCIA PARA LOS STOCK MOVE _______________ -->

    <record model="ir.ui.view" id="view_move_tree_inhrt_arg1l" >
        <field name="name">stock.move.herencia.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree" />
        <field name="arch" type="xml">
            <field name="prodlot_id" position="after">
              <field name="pedimento_id" groups="stock.group_production_lot"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_move_picking_tree_inhrt_arg1l" >
        <field name="name">stock.move.herencia.tree.p</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_tree" />
        <field name="arch" type="xml">
            <field name="tracking_id" position="before">
              <field name="pedimento_id" groups="stock.group_production_lot"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_move_form_inhrt_arg1l" >
        <field name="name">stock.move.herencia.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form" />
        <field name="arch" type="xml">
            <group string="Traceability" position="after">
              <group string="Pedimentos" groups="stock.group_tracking_lot,stock.group_production_lot">
                <field name="pedimento_id" />
              </group>
            </group>
        </field>
    </record>

   <record model="ir.ui.view" id="view_move_picking_form_inhrt_arg1l" >
        <field name="name">stock.move.herencia.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_form" />
        <field name="arch" type="xml">
            <group string="Traceability" position="after">
              <group string="Pedimentos" groups="stock.group_tracking_lot,stock.group_production_lot">
                <field name="pedimento_id" />
              </group>
            </group>
        </field>
    </record>
  <!-- ___________ Definicion de las Vistas para los Pedimentos _________ -->

        <record id="view_production_lot_revision_pedimento_form" model="ir.ui.view">
            <field name="name">stock.production.lot.revision.pedimento.form</field>
            <field name="model">stock.production.lot.revision.pedimento</field>
            <field name="arch" type="xml">
                <form string="Revisiones para Pedimentos" version="7.0">
                    <group col="4">
                        <field name="name"/>
                        <field name="indice"/>
                        <field name="date"/>
                        <field name="author_id"/>
                    </group>
                    <separator string="Descripcion"/>
                    <field name="description"/>
                </form>
            </field>
        </record>
        <record id="view_production_lot_revision_pedimento_tree" model="ir.ui.view">
            <field name="name">stock.production.lot.revision.tree.pedimento</field>
            <field name="model">stock.production.lot.revision.pedimento</field>
            <field name="arch" type="xml">
                <tree string="Revisiones para Pedimentos">
                    <field name="indice"/>
                    <field name="author_id"/>
                    <field name="date"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_production_lot_pedimento_form" model="ir.ui.view">
            <field name="name">stock.production.lot.form.pedimento</field>
            <field name="model">stock.production.lot.pedimento</field>
            <field name="arch" type="xml">
                <form string="Definicion de Pedimentos" version="7.0">
                    <div class="oe_button_box oe_right">
                        <!-- <button name="action_traceability" string="Upstream Traceability" type="object" context="{'type': 'move_history_ids2', 'field': 'prodlot_id'}"/>
                        <button name="action_traceability" string="Downstream Traceability" type="object" context="{'type': 'move_history_ids', 'field': 'prodlot_id'}"/> -->
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="prefix"/>
                            <field name="ref"/>
                            <field name="pedimento_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="stock_available"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Revisiones">
                            <field name="revisions"/>
                            
                            <group>
                                <field name="pedimento_id" readonly="1"/>
                            </group>
                        </page>
                        <page string="Movimientos de Existencias">
                            <field name="move_ids">
                                <tree  string="Movimientos Existencias">
                                    <field name="picking_id" string="Reference"/>
                                    <field name="origin"/>
                                    <field name="product_id"/>
                                    <field name="product_qty" on_change="onchange_quantity(product_id, product_qty, product_uom, product_uos)"/>
                                    <field name="product_uom" string="Unit of Measure" groups="product.group_uom"/>
                                    <field name="tracking_id" groups="stock.group_tracking_lot"/>
                                    <field name="date"/>
                                    <field name="prodlot_id"/>
                                    <field name="location_id" groups="stock.group_locations"/>
                                    <field name="location_dest_id" groups="stock.group_locations"/>
                                    <field name="state"/>
                                </tree>
                             </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record id="view_production_lot_pedimento_tree" model="ir.ui.view">
            <field name="name">stock.production.lot.tree.pedimento</field>
            <field name="model">stock.production.lot.pedimento</field>
            <field name="arch" type="xml">
                <tree string="Pedimentos">
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="stock_available"/>
                    <field name="prefix"/>
                    <field name="ref"/>
                    <field name="date"/>
                    <field name="pedimento_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="search_product_lot_pedimento_filter">
            <field name="name">Filtros de Pedimentos</field>
            <field name="model">stock.production.lot</field>
            <field name="arch" type="xml">
                <search string="Product Lots Filter">
                    <field name="name" string="Pedimentos" filter_domain="['|','|',('name','ilike',self),('prefix','ilike',self),('ref','ilike',self)]"/>
                    <field name="date"/>
                    <filter icon="terp-check" name="available" string="Disponible" domain="[('stock_available', '&gt;', 0)]" help="Available Product Lots"/>
                    <field name="product_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Producto" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_production_lot_pedimento_form" model="ir.actions.act_window">
            <field name="name">Pedimentos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.production.lot.pedimento</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_production_lot_pedimento_tree"/>
            <field name="search_view_id" ref="search_product_lot_pedimento_filter"/>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click para crear un nuevo Pedimento.
              </p><p>
               En esta pantalla se Muestran los pedimentos que se han utilizado.
              </p>
            </field>
        </record>

        <menuitem action="action_production_lot_pedimento_form" id="menu_action_production_lot_pedimento_form"
            parent="stock.menu_traceability" groups="stock.group_production_lot"
            sequence="100"/>



  <!-- ___________________________________________________________________ -->
    <menuitem name="Pedimentos" id="pedimento_custom_action_menu" parent="purchase.menu_procurement_management" sequence="100" />
    <menuitem action="pedimento_custom_action" id="pedimento_custom_action_menu_list" parent="pedimento_custom_action_menu" sequence="1" />
    <!-- <menuitem action="pedimento_config_action" id="pedimento_config_act_menu" parent="pedimento_custom_action_menu" sequence="2" /> -->
  

</data>
</openerp>
