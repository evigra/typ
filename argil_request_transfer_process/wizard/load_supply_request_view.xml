<?xml version="1.0"?>
<openerp>
    <data>
        <!-- load purchase -->
        <record model="ir.ui.view" id="load_supply_request_wizard_form">
            <field name="name">supply.request.load</field>
            <field name="model">supply.request.load</field>
            <field name="arch" type="xml">
                <form string="Load Supply Request" version="7.0">
                    <separator string="Supply Request(s)"/>
                    <field name="transfer_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="warehouse_id" invisible="1"/>
                    <field name="supply_request_line_ids" nolabel="1">
                        <tree string="" editable="top" create="false">
                            <field name="supply_req_id" readonly="1"/>
                            <field name="product_id" readonly="1" />
                            <field name="product_uom_id" readonly="1"/>
                            <field name="required_date" readonly="1"/>
                            <field name="from_warehouse_id" readonly="1"/>
                            <field name="qty_request" readonly="1"/>
                            <field name="qty_sent" required="1"/>
                        </tree>
                        </field>
                    <footer>
                        <button type="object" name="load_supply_request"
                            class="oe_highlight" string="Load Supply Request(s)" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
                </field>
                </record>
    </data>
    </openerp>