<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record id="consolidation_config_tree" model="ir.ui.view">
            <field name="name">reclasification.automatic.config.tree</field>
            <field name="model">reclasification.automatic.config</field>
            <field name="arch" type="xml">
                <tree string="Configuracion para Reclasificacion de Fletes" version="7.0">
                    <field name="name" />
                    <field name="company_id" />                      
                </tree>
            </field>
        </record>

        <record id="consolidation_config_form" model="ir.ui.view">
            <field name="name">reclasification.automatic.config.form</field>
            <field name="model">reclasification.automatic.config</field>
            <field name="arch" type="xml">
                <form string="Configuracion para Reclasificacion de Fletes" version="7.0">
                    
                    <sheet>
                       <separator string="Definicion de Cuentas Transitorias para CEDIS" />
                            <group>
                                <field name="name" />
                                <field name="company_id" />
<!--                                 <field name="account_bridge" domain="[('company_id','=',company_id)]"/>
 --><!--                                 <field name="account_bridge" domain="[('type','=','view'),('company_id','=',company_id)]"/>
 --><!--                                 <field name="account_bridge_company" domain="[('type','=','other'),('company_id','=',company_id)]"/>
 --><!--                                 <field name="account_bridge_consolidation" domain="[('type','=','consolidation'),('company_id','=',company_id)]"/>
 -->                            </group>
                        
                        <separator string="Cuentas Transitorias para cada Sucursal" />
                        <field name="account_bridge_lines" >
                            <tree string="Configuracion de Cuentas por Sucursal" editable="bottom">
                                <field name="company_id" />
                                <!-- <field name="account_bridge" domain="[('company_id','=',company_id)]"/> -->
                                <field name="account_bridge_shop" domain="[('company_id','=',parent.company_id)]"/>
                            </tree>
                        </field>

                    </sheet>
                      
                </form>
            </field>
        </record>

        <!--================================ACTIONS============================-->
        <record model="ir.actions.act_window" id="action_reclasification_config">
            <field name="name">Reclasificacion de Fletes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reclasification.automatic.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
               Click para crear la Configuracion de Reclasificacion.
              </p><p>
               Define las cuentas Transitorias para cada Sucursal..
              </p>
            </field>
        </record>
            <!--===========================MENU================================-->

        <menuitem action="action_reclasification_config" id="menu_invoice_reclasificacion_bridge" parent="account.menu_finance_payables" sequence="100"/>


